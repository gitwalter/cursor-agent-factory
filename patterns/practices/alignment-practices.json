{
  "$schema": "./practice-pattern.json",
  "title": "Alignment Practices",
  "description": "Practices that ensure we stay true to our purpose and values",
  "version": "1.0.0",
  "philosophy": "To serve well, we must remember why we serve.",
  "practices": [
    {
      "practiceId": "P7_weekly_learning",
      "name": "Weekly Learning Session",
      "frequency": "weekly",
      "duration": "1 hour",
      "purpose": "Continuous improvement through shared learning",
      "axiom_alignment": ["A10_learning", "A3_transparency"],
      "participants": ["team"],
      "steps": [
        {
          "step": 1,
          "action": "Share discoveries",
          "guidance": "What did you learn this week that others might benefit from?"
        },
        {
          "step": 2,
          "action": "Discuss challenges",
          "guidance": "What problems did you solve? How?"
        },
        {
          "step": 3,
          "action": "Review patterns",
          "guidance": "Did any patterns emerge that should be captured?"
        },
        {
          "step": 4,
          "action": "Plan experiments",
          "guidance": "What should we try next week?"
        }
      ],
      "topics_rotation": [
        "Technical deep-dive",
        "Pattern sharing",
        "Failure analysis (blameless)",
        "External learning (articles, talks)",
        "Tool or technique demo"
      ],
      "reflection_prompts": [
        "What made us better this week?",
        "Where did we fall short of our standards?",
        "What patterns should we capture for the team?"
      ],
      "artifacts": ["Learning notes", "Pattern updates", "Experiment proposals"],
      "success_indicators": [
        "Team knowledge grows",
        "Mistakes aren't repeated",
        "Innovation continues"
      ]
    },
    {
      "practiceId": "P8_sprint_retrospective",
      "name": "Sprint Retrospective",
      "frequency": "per_sprint",
      "duration": "1-2 hours",
      "purpose": "Reflect on process and relationships to improve continuously",
      "axiom_alignment": ["A10_learning", "A3_transparency", "A2_user_primacy"],
      "participants": ["team"],
      "steps": [
        {
          "step": 1,
          "action": "Create safe space",
          "guidance": "Remind team this is blameless reflection"
        },
        {
          "step": 2,
          "action": "Celebrate successes",
          "guidance": "What went well? What should we keep doing?"
        },
        {
          "step": 3,
          "action": "Identify improvements",
          "guidance": "What could be better? What held us back?"
        },
        {
          "step": 4,
          "action": "Check purpose alignment",
          "guidance": "Did our work serve our stakeholders well?"
        },
        {
          "step": 5,
          "action": "Commit to actions",
          "guidance": "What specific changes will we make?"
        }
      ],
      "formats": [
        "Start/Stop/Continue",
        "Glad/Sad/Mad",
        "Sailboat (wind, anchor, rocks)",
        "4Ls (Liked, Learned, Lacked, Longed for)"
      ],
      "reflection_prompts": [
        "Did we serve our stakeholders well this sprint?",
        "Did we maintain our quality standards?",
        "Did we live our values?",
        "Are we proud of what we delivered?"
      ],
      "artifacts": ["Retrospective notes", "Action items", "Updated practices"],
      "success_indicators": [
        "Honest, constructive discussion",
        "Actionable improvements identified",
        "Team morale maintained or improved"
      ]
    },
    {
      "practiceId": "P9_release_blessing",
      "name": "Release Blessing",
      "frequency": "per_release",
      "duration": "30 minutes",
      "purpose": "Mark the completion of work with reflection and gratitude",
      "axiom_alignment": ["A1_verifiability", "A2_user_primacy", "A3_transparency"],
      "participants": ["team"],
      "steps": [
        {
          "step": 1,
          "action": "Verify quality",
          "guidance": "Confirm all quality gates passed"
        },
        {
          "step": 2,
          "action": "Document value delivered",
          "guidance": "What do users gain from this release?"
        },
        {
          "step": 3,
          "action": "Acknowledge contributors",
          "guidance": "Recognize everyone who made this possible"
        },
        {
          "step": 4,
          "action": "Record lessons",
          "guidance": "What did we learn during this cycle?"
        },
        {
          "step": 5,
          "action": "Release with intention",
          "guidance": "Send work into the world with care"
        }
      ],
      "release_checklist": [
        "[ ] All tests passing",
        "[ ] Security scan clean",
        "[ ] Documentation updated",
        "[ ] Release notes written",
        "[ ] Stakeholders informed",
        "[ ] Rollback plan ready"
      ],
      "reflection_prompts": [
        "Does this release serve our users well?",
        "Are we proud of this work?",
        "What made this release possible?",
        "How can the next release be even better?"
      ],
      "artifacts": ["Release notes", "Value summary", "Lessons learned"],
      "success_indicators": [
        "Release is stable and well-received",
        "Team feels accomplishment",
        "Lessons captured for next cycle"
      ]
    },
    {
      "practiceId": "P10_quarterly_alignment",
      "name": "Quarterly Purpose Alignment",
      "frequency": "quarterly",
      "duration": "2-3 hours",
      "purpose": "Step back to ensure we remain true to our mission",
      "axiom_alignment": ["A2_user_primacy", "A5_consistency"],
      "participants": ["team", "stakeholders"],
      "steps": [
        {
          "step": 1,
          "action": "Review mission and purpose",
          "guidance": "Re-read PURPOSE.md together"
        },
        {
          "step": 2,
          "action": "Assess progress toward success criteria",
          "guidance": "Are we moving toward our stated goals?"
        },
        {
          "step": 3,
          "action": "Gather stakeholder feedback",
          "guidance": "Are we serving our users well?"
        },
        {
          "step": 4,
          "action": "Review axiom adherence",
          "guidance": "Are we living our foundational principles?"
        },
        {
          "step": 5,
          "action": "Adjust if needed",
          "guidance": "Update purpose or approach based on learning"
        }
      ],
      "reflection_prompts": [
        "Are we still solving the right problem?",
        "Are our stakeholders better off because of our work?",
        "Have we stayed true to our values?",
        "What should we change to serve better?"
      ],
      "artifacts": ["Quarterly review document", "Updated PURPOSE.md if needed", "Strategic adjustments"],
      "success_indicators": [
        "Purpose remains relevant and clear",
        "Team aligned on direction",
        "Stakeholders feel served",
        "Values are lived, not just stated"
      ]
    }
  ]
}
