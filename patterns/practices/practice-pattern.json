{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Practice Pattern Schema",
  "description": "Schema for practice patterns - regular disciplines that maintain excellence and alignment",
  "version": "1.0.0",
  "philosophy": "Excellence emerges from consistent, intentional practice.",
  "type": "object",
  "required": ["practiceId", "name", "frequency", "purpose", "steps"],
  "properties": {
    "practiceId": {
      "type": "string",
      "pattern": "^P[0-9]+_[a-z_]+$",
      "description": "Unique identifier following pattern P{number}_{name}",
      "examples": ["P1_daily_reflection", "P2_code_as_craft"]
    },
    "name": {
      "type": "string",
      "description": "Human-readable name for the practice"
    },
    "frequency": {
      "type": "string",
      "enum": ["continuous", "per_commit", "per_task", "daily", "weekly", "per_sprint", "per_release", "monthly", "quarterly"],
      "description": "How often this practice is performed"
    },
    "duration": {
      "type": "string",
      "description": "Expected time for the practice (e.g., '5 minutes', '1 hour')"
    },
    "purpose": {
      "type": "string",
      "description": "Why this practice matters"
    },
    "axiom_alignment": {
      "type": "array",
      "items": {"type": "string"},
      "description": "Which axioms this practice serves"
    },
    "participants": {
      "type": "array",
      "items": {"type": "string"},
      "description": "Who participates in this practice"
    },
    "steps": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "step": {"type": "integer"},
          "action": {"type": "string"},
          "guidance": {"type": "string"}
        }
      },
      "description": "Steps to perform the practice"
    },
    "reflection_prompts": {
      "type": "array",
      "items": {"type": "string"},
      "description": "Questions to consider during the practice"
    },
    "artifacts": {
      "type": "array",
      "items": {"type": "string"},
      "description": "What is produced by this practice"
    },
    "success_indicators": {
      "type": "array",
      "items": {"type": "string"},
      "description": "How to know the practice was effective"
    }
  }
}
