{
  "patternId": "knowledge-schema",
  "patternName": "Knowledge File Schema",
  "description": "Standard schema for Factory knowledge files",
  "version": "1.0.0",
  "schema": {
    "required_fields": [
      "$schema",
      "title",
      "description",
      "version",
      "patterns"
    ],
    "pattern_fields": [
      "name",
      "description",
      "category",
      "when_to_use",
      "implementation",
      "best_practices"
    ],
    "optional_fields": [
      "metadata",
      "last_updated",
      "sources",
      "pitfalls",
      "references"
    ]
  },
  "validation_rules": [
    {
      "rule": "minimum_patterns",
      "value": 3,
      "description": "Each knowledge file should have at least 3 patterns"
    },
    {
      "rule": "code_examples",
      "value": true,
      "description": "Patterns should include code examples where applicable"
    },
    {
      "rule": "sources_required",
      "value": true,
      "description": "Knowledge should cite sources for verifiability (A1)"
    }
  ],
  "naming_convention": {
    "file_pattern": "{topic}-patterns.json",
    "topic_format": "kebab-case",
    "examples": [
      "constitutional-ai-patterns.json",
      "agent-architecture-patterns.json",
      "prompt-engineering-patterns.json"
    ]
  }
}
