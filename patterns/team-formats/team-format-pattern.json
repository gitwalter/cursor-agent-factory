{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Team Format Pattern Schema",
  "description": "Schema for team-size adaptations - how workshops and games scale for different team sizes",
  "version": "1.0.0",
  "philosophy": "Every team size has unique strengths. Small teams have intimacy, large teams have diversity. Our adaptations honor these differences.",
  "axiom_alignment": ["A0_love_and_trust", "A2_user_primacy"],
  "type": "object",
  "required": ["formatId", "name", "team_size_range", "general_principles", "workshop_adaptations"],
  "properties": {
    "formatId": {
      "type": "string",
      "pattern": "^TF_[a-z_]+$",
      "description": "Unique identifier following pattern TF_{size}",
      "examples": ["TF_small", "TF_medium", "TF_large"]
    },
    "name": {
      "type": "string",
      "description": "Human-readable name for this format"
    },
    "team_size_range": {
      "type": "object",
      "properties": {
        "min": {"type": "integer"},
        "max": {"type": "integer"},
        "sweet_spot": {"type": "integer"}
      }
    },
    "general_principles": {
      "type": "array",
      "items": {"type": "string"},
      "description": "Overall principles for this team size"
    },
    "facilitation_style": {
      "type": "object",
      "properties": {
        "energy_management": {"type": "string"},
        "participation_approach": {"type": "string"},
        "decision_making": {"type": "string"},
        "time_buffer": {"type": "string"}
      }
    },
    "communication_patterns": {
      "type": "object",
      "properties": {
        "sharing_format": {"type": "string"},
        "feedback_style": {"type": "string"},
        "conflict_resolution": {"type": "string"}
      }
    },
    "workshop_adaptations": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "duration_adjustment": {"type": "string"},
          "activity_modifications": {"type": "array", "items": {"type": "string"}},
          "facilitation_notes": {"type": "string"}
        }
      }
    },
    "game_adaptations": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "format_change": {"type": "string"},
          "timing_adjustment": {"type": "string"},
          "participation_model": {"type": "string"}
        }
      }
    },
    "technology_recommendations": {
      "type": "object",
      "properties": {
        "video_conferencing": {"type": "string"},
        "collaboration_tools": {"type": "array", "items": {"type": "string"}},
        "voting_tools": {"type": "array", "items": {"type": "string"}}
      }
    },
    "axiom_zero_considerations": {
      "type": "string",
      "description": "How love and trust manifest differently at this team size"
    }
  }
}
