{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Principle Pattern Schema",
  "description": "Schema for Layer 2 principles that define standards and boundaries",
  "version": "1.0.0",
  "type": "object",
  "required": ["principleId", "name", "category", "axiom_basis", "statement"],
  "properties": {
    "principleId": {
      "type": "string",
      "pattern": "^(EB|QS|FH)[0-9]+_[a-z_]+$",
      "description": "Unique identifier: EB=Ethical Boundary, QS=Quality Standard, FH=Failure Handling",
      "examples": ["EB1_no_silent_failures", "QS1_test_coverage", "FH1_graceful_degradation"]
    },
    "name": {
      "type": "string",
      "description": "Human-readable name for the principle"
    },
    "category": {
      "type": "string",
      "enum": ["ethical_boundary", "quality_standard", "failure_handling"],
      "description": "Category of principle"
    },
    "axiom_basis": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^A[0-9]+_[a-z_]+$"
      },
      "minItems": 1,
      "description": "Axioms from which this principle is derived"
    },
    "statement": {
      "type": "string",
      "description": "The principle statement"
    },
    "rationale": {
      "type": "string",
      "description": "Why this principle matters"
    },
    "enforcement": {
      "type": "string",
      "description": "Related enforcement pattern ID"
    },
    "examples": {
      "type": "array",
      "items": {"type": "string"},
      "description": "Examples of applying this principle"
    },
    "exceptions": {
      "type": "array",
      "items": {"type": "string"},
      "description": "When this principle may not apply"
    }
  }
}
