{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Game Pattern Schema",
  "description": "Schema for workshop games - playful activities that generate insights, content, and team alignment",
  "version": "1.0.0",
  "philosophy": "Games unlock creativity, build trust, and make the serious work of vision-setting joyful. Through play, we discover truths that serious discussion cannot reveal.",
  "axiom_alignment": ["A0_love_and_trust"],
  "type": "object",
  "required": ["gameId", "name", "category", "purpose", "duration", "minPlayers", "rules"],
  "properties": {
    "gameId": {
      "type": "string",
      "pattern": "^G[0-9]+_[a-z_]+$",
      "description": "Unique identifier following pattern G{number}_{name}",
      "examples": ["G1_future_headlines", "G2_stakeholder_safari"]
    },
    "name": {
      "type": "string",
      "description": "Human-readable name for the game"
    },
    "category": {
      "type": "string",
      "enum": ["creative", "strategic", "collaborative"],
      "description": "Game category that defines its primary mode of engagement"
    },
    "purpose": {
      "type": "string",
      "description": "What insight or artifact this game produces"
    },
    "workshop_phase": {
      "type": "string",
      "enum": ["vision_quest", "ethics_arena", "stack_safari", "agent_assembly", "integration_celebration", "any"],
      "description": "Which workshop this game is designed for"
    },
    "duration": {
      "type": "object",
      "properties": {
        "min_minutes": {"type": "integer"},
        "max_minutes": {"type": "integer"},
        "scales_with_team_size": {"type": "boolean"}
      },
      "description": "Time requirements for the game"
    },
    "minPlayers": {
      "type": "integer",
      "minimum": 2,
      "description": "Minimum number of players required"
    },
    "maxPlayers": {
      "type": "integer",
      "description": "Maximum recommended players (null for unlimited)"
    },
    "team_size_adaptations": {
      "type": "object",
      "properties": {
        "small": {"type": "string", "description": "Adaptation for 2-5 players"},
        "medium": {"type": "string", "description": "Adaptation for 6-12 players"},
        "large": {"type": "string", "description": "Adaptation for 13+ players"}
      }
    },
    "materials": {
      "type": "array",
      "items": {"type": "string"},
      "description": "Physical or digital materials needed"
    },
    "rules": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "phase": {"type": "string"},
          "duration": {"type": "string"},
          "instructions": {"type": "string"},
          "facilitator_notes": {"type": "string"}
        }
      },
      "description": "Step-by-step rules for playing"
    },
    "ai_facilitation": {
      "type": "object",
      "properties": {
        "prompts": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Prompts the AI facilitator uses"
        },
        "synthesis_instructions": {
          "type": "string",
          "description": "How AI synthesizes player contributions"
        },
        "follow_up_questions": {
          "type": "array",
          "items": {"type": "string"}
        }
      }
    },
    "outputs": {
      "type": "array",
      "items": {"type": "string"},
      "description": "What artifacts or insights the game produces"
    },
    "success_indicators": {
      "type": "array",
      "items": {"type": "string"},
      "description": "How to know the game achieved its purpose"
    },
    "variations": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {"type": "string"},
          "description": {"type": "string"},
          "when_to_use": {"type": "string"}
        }
      },
      "description": "Alternative ways to play the game"
    },
    "connection_to_axiom_zero": {
      "type": "string",
      "description": "How this game embodies love and trust"
    }
  }
}
