{
  "$schema": "../product.json",
  "methodologyId": "kanban",
  "name": "Kanban Defaults",
  "description": "Default configuration for Kanban methodology in PM system",
  "version": "1.0.0",
  "board_configuration": {
    "columns": [
      {
        "name": "Backlog",
        "wip_limit": null,
        "type": "input_queue",
        "description": "Unprioritized work items"
      },
      {
        "name": "Ready",
        "wip_limit": 5,
        "type": "commitment_point",
        "description": "Ready to start work"
      },
      {
        "name": "In Progress",
        "wip_limit": 3,
        "type": "work_column",
        "description": "Active work"
      },
      {
        "name": "Review",
        "wip_limit": 2,
        "type": "work_column",
        "description": "Code review and QA"
      },
      {
        "name": "Done",
        "wip_limit": null,
        "type": "output_queue",
        "description": "Completed work"
      }
    ],
    "classes_of_service": [
      {
        "name": "Expedite",
        "sla": "1_day",
        "color": "red",
        "description": "Urgent items"
      },
      {
        "name": "Standard",
        "sla": "5_days",
        "color": "blue",
        "description": "Normal priority"
      },
      {
        "name": "Fixed Date",
        "sla": "by_date",
        "color": "purple",
        "description": "Date-committed items"
      },
      {
        "name": "Intangible",
        "sla": "none",
        "color": "gray",
        "description": "Low priority"
      }
    ]
  },
  "wip_limits": {
    "enforcement": "strict",
    "exception_policy": "explicit_approval_required",
    "swarm_on_blocked": true
  },
  "ceremonies": {
    "daily_standup": {
      "frequency": "daily",
      "duration": "15_minutes",
      "format": "board_walk",
      "participants": ["all_team_members"],
      "agenda": [
        "Walk the board right to left",
        "Identify blocked items",
        "Balance workload"
      ]
    },
    "replenishment_meeting": {
      "frequency": "as_needed",
      "duration": "30_minutes",
      "format": "backlog_selection",
      "participants": ["service_delivery_manager", "stakeholders"],
      "agenda": [
        "Review completed work",
        "Select new items for ready column",
        "Priority adjustments"
      ]
    },
    "service_delivery_review": {
      "frequency": "bi_weekly",
      "duration": "1_hour",
      "format": "metrics_review",
      "participants": ["all_team_members", "stakeholders"],
      "agenda": [
        "Lead time and cycle time trends",
        "Throughput analysis",
        "SLA performance"
      ]
    },
    "operations_review": {
      "frequency": "monthly",
      "duration": "2_hours",
      "format": "system_improvement",
      "participants": ["all_team_members"],
      "agenda": [
        "Bottleneck analysis",
        "Policy changes",
        "Process experiments"
      ]
    }
  },
  "roles": {
    "service_delivery_manager": {
      "responsibilities": [
        "flow_metrics_monitoring",
        "bottleneck_identification",
        "wip_limit_management",
        "sla_tracking"
      ],
      "required": false
    },
    "team_members": {
      "responsibilities": [
        "work_item_completion",
        "wip_limit_adherence",
        "pull_based_work_selection",
        "continuous_improvement"
      ],
      "count": "4-8"
    }
  },
  "flow_metrics": {
    "lead_time": {
      "track": true,
      "target": "predictable_and_improving",
      "measurement": "time_from_commitment_to_delivery"
    },
    "cycle_time": {
      "track": true,
      "target": "stable_with_low_variance",
      "measurement": "time_from_start_to_completion"
    },
    "throughput": {
      "track": true,
      "target": "predictable_sustainable_pace",
      "measurement": "items_completed_per_time_period"
    },
    "wip": {
      "track": true,
      "target": "within_limits",
      "measurement": "work_in_progress_at_any_time"
    }
  },
  "quality_gates": {
    "definition_of_ready": "item_clearly_defined_and_estimated",
    "definition_of_done": "tested_reviewed_and_deployable",
    "wip_limits": "enforced_with_explicit_policy_for_exceptions"
  },
  "policies": {
    "work_selection": "pull_based_from_ready_column",
    "bottleneck_handling": "swarm_to_resolve_blockers",
    "escalation": "explicit_policies_for_blocked_items",
    "continuous_improvement": "evolutionary_change_via_experiments"
  }
}
