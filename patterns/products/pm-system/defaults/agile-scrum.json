{
  "$schema": "../product.json",
  "methodologyId": "scrum",
  "name": "Agile Scrum Defaults",
  "description": "Default configuration for Scrum methodology in PM system",
  "version": "1.0.0",
  "sprint": {
    "length": "2weeks",
    "planningDuration": "2-4_hours",
    "reviewDuration": "1-2_hours",
    "retrospectiveDuration": "1_hour"
  },
  "ceremonies": {
    "daily_standup": {
      "frequency": "daily",
      "duration": "15_minutes",
      "time": "09:00",
      "format": "structured_updates",
      "participants": ["all_team_members"],
      "agenda": [
        "What I completed yesterday",
        "What I'm working on today",
        "Any blockers"
      ]
    },
    "sprint_planning": {
      "frequency": "sprint_start",
      "duration": "2-4_hours",
      "format": "collaborative_planning",
      "participants": ["product_owner", "scrum_master", "developers"],
      "agenda": [
        "Sprint goal definition",
        "Story selection and estimation",
        "Task breakdown"
      ]
    },
    "sprint_review": {
      "frequency": "sprint_end",
      "duration": "1-2_hours",
      "format": "demonstration_and_feedback",
      "participants": ["all_team_members", "stakeholders"],
      "agenda": [
        "Demo completed work",
        "Gather feedback",
        "Discuss next priorities"
      ]
    },
    "retrospective": {
      "frequency": "sprint_end",
      "duration": "1_hour",
      "format": "reflection_and_improvement",
      "participants": ["all_team_members"],
      "agenda": [
        "What went well",
        "What could improve",
        "Action items for next sprint"
      ]
    }
  },
  "roles": {
    "product_owner": {
      "responsibilities": [
        "backlog_prioritization",
        "user_story_creation",
        "acceptance_criteria_definition",
        "stakeholder_communication"
      ],
      "required": true
    },
    "scrum_master": {
      "responsibilities": [
        "ceremony_facilitation",
        "blocker_removal",
        "process_improvement",
        "team_coaching"
      ],
      "required": true
    },
    "developers": {
      "responsibilities": [
        "story_implementation",
        "task_estimation",
        "code_review",
        "testing"
      ],
      "count": "3-9"
    }
  },
  "backlog": {
    "estimation": "story-points",
    "prioritization": "value_and_effort",
    "refinement": {
      "frequency": "weekly",
      "duration": "1_hour"
    }
  },
  "metrics": {
    "velocity": {
      "track": true,
      "target": "stable_or_increasing"
    },
    "burndown": {
      "track": true,
      "chart": "sprint_burndown"
    },
    "sprint_goal_achievement": {
      "track": true
    }
  },
  "definition_of_done": [
    "Code reviewed",
    "Tests written and passing",
    "Documentation updated",
    "Deployed to staging",
    "Accepted by product owner"
  ],
  "definition_of_ready": [
    "User story clearly defined",
    "Acceptance criteria specified",
    "Dependencies identified",
    "Estimated",
    "Prioritized"
  ]
}
