{
  "$schema": "../product.json",
  "methodologyId": "waterfall",
  "name": "Waterfall Defaults",
  "description": "Default configuration for Waterfall methodology in PM system",
  "version": "1.0.0",
  "phases": [
    {
      "name": "Requirements",
      "description": "Gather and document requirements",
      "duration": "2-4_weeks",
      "deliverables": [
        "Requirements specification",
        "Stakeholder sign-off",
        "Change control process"
      ],
      "gates": {
        "entry": "Project charter approved",
        "exit": "Requirements approved"
      }
    },
    {
      "name": "Design",
      "description": "Create system and detailed design",
      "duration": "3-6_weeks",
      "deliverables": [
        "System design document",
        "Architecture diagrams",
        "Database schema",
        "API specifications"
      ],
      "gates": {
        "entry": "Requirements approved",
        "exit": "Design approved"
      }
    },
    {
      "name": "Implementation",
      "description": "Develop and unit test code",
      "duration": "6-12_weeks",
      "deliverables": [
        "Source code",
        "Unit tests",
        "Code documentation"
      ],
      "gates": {
        "entry": "Design approved",
        "exit": "Code complete and unit tested"
      }
    },
    {
      "name": "Testing",
      "description": "System and integration testing",
      "duration": "3-6_weeks",
      "deliverables": [
        "Test plans",
        "Test cases",
        "Test results",
        "Bug reports"
      ],
      "gates": {
        "entry": "Code complete",
        "exit": "All tests passing"
      }
    },
    {
      "name": "Deployment",
      "description": "Deploy to production",
      "duration": "1-2_weeks",
      "deliverables": [
        "Deployment plan",
        "Operations documentation",
        "Training materials"
      ],
      "gates": {
        "entry": "All tests passing",
        "exit": "Production deployment complete"
      }
    },
    {
      "name": "Maintenance",
      "description": "Ongoing support and maintenance",
      "duration": "ongoing",
      "deliverables": [
        "Bug fixes",
        "Enhancements",
        "Performance monitoring"
      ],
      "gates": {
        "entry": "Production deployment complete",
        "exit": "Project closure"
      }
    }
  ],
  "ceremonies": {
    "phase_gate_review": {
      "frequency": "phase_end",
      "duration": "2-4_hours",
      "format": "formal_review",
      "participants": ["project_manager", "stakeholders", "technical_lead"],
      "agenda": [
        "Review phase deliverables",
        "Verify gate criteria met",
        "Approve next phase",
        "Risk assessment"
      ]
    },
    "status_review": {
      "frequency": "weekly",
      "duration": "1_hour",
      "format": "status_reporting",
      "participants": ["project_manager", "team_leads", "stakeholders"],
      "agenda": [
        "Progress update",
        "Milestone status",
        "Risk and issues",
        "Resource needs"
      ]
    },
    "change_control_board": {
      "frequency": "as_needed",
      "duration": "1-2_hours",
      "format": "formal_change_review",
      "participants": ["project_manager", "stakeholders", "technical_lead"],
      "agenda": [
        "Review change requests",
        "Assess impact",
        "Approve or reject changes",
        "Update project plan"
      ]
    }
  },
  "roles": {
    "project_manager": {
      "responsibilities": [
        "project_planning",
        "resource_allocation",
        "risk_management",
        "stakeholder_communication",
        "phase_gate_management"
      ],
      "required": true
    },
    "business_analyst": {
      "responsibilities": [
        "requirements_gathering",
        "requirements_documentation",
        "stakeholder_liaison",
        "change_management"
      ],
      "required": true
    },
    "technical_lead": {
      "responsibilities": [
        "technical_design",
        "architecture_decisions",
        "code_review_oversight",
        "technical_risk_assessment"
      ],
      "required": true
    },
    "developers": {
      "responsibilities": [
        "code_implementation",
        "unit_testing",
        "technical_documentation"
      ],
      "count": "varies_by_phase"
    },
    "qa_engineer": {
      "responsibilities": [
        "test_planning",
        "test_execution",
        "defect_tracking",
        "quality_assurance"
      ],
      "required": true
    }
  },
  "documentation": {
    "requirements": {
      "template": "requirements_specification",
      "required": true
    },
    "design": {
      "template": "design_document",
      "required": true
    },
    "test_plan": {
      "template": "test_plan",
      "required": true
    },
    "deployment_plan": {
      "template": "deployment_plan",
      "required": true
    }
  },
  "change_management": {
    "process": "formal_change_control",
    "approval_required": true,
    "impact_analysis": "required",
    "documentation": "mandatory"
  },
  "metrics": {
    "schedule_adherence": {
      "track": true,
      "target": "on_time_delivery"
    },
    "budget_adherence": {
      "track": true,
      "target": "within_budget"
    },
    "scope_changes": {
      "track": true,
      "target": "minimize_changes"
    },
    "defect_density": {
      "track": true,
      "target": "low_defect_rate"
    },
    "phase_gate_compliance": {
      "track": true,
      "target": "100_percent"
    }
  },
  "quality_gates": {
    "requirements_phase": "requirements_approved_and_baselined",
    "design_phase": "design_approved_and_baselined",
    "implementation_phase": "code_complete_unit_tested",
    "testing_phase": "all_tests_passing_defects_resolved",
    "deployment_phase": "production_deployment_successful"
  }
}
