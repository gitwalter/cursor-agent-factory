{
  "$schema": "../product.json",
  "methodologyId": "hybrid",
  "name": "Hybrid Scrum-Kanban Defaults",
  "description": "Default configuration for hybrid Scrum-Kanban methodology in PM system",
  "version": "1.0.0",
  "sprint": {
    "length": "2weeks",
    "planningDuration": "2-3_hours",
    "reviewDuration": "1_hour",
    "retrospectiveDuration": "45_minutes"
  },
  "board_configuration": {
    "columns": [
      {
        "name": "Backlog",
        "wip_limit": null,
        "type": "input_queue"
      },
      {
        "name": "Sprint Backlog",
        "wip_limit": null,
        "type": "commitment_point"
      },
      {
        "name": "Ready",
        "wip_limit": 5,
        "type": "work_column"
      },
      {
        "name": "In Progress",
        "wip_limit": 3,
        "type": "work_column"
      },
      {
        "name": "Review",
        "wip_limit": 2,
        "type": "work_column"
      },
      {
        "name": "Done",
        "wip_limit": null,
        "type": "output_queue"
      }
    ]
  },
  "wip_limits": {
    "enforcement": "moderate",
    "exception_policy": "team_consensus"
  },
  "ceremonies": {
    "daily_standup": {
      "frequency": "daily",
      "duration": "15_minutes",
      "format": "board_walk_with_updates",
      "participants": ["all_team_members"],
      "agenda": [
        "Walk the board",
        "What I completed yesterday",
        "What I'm working on today",
        "Any blockers"
      ]
    },
    "sprint_planning": {
      "frequency": "sprint_start",
      "duration": "2-3_hours",
      "format": "collaborative_planning",
      "participants": ["product_owner", "scrum_master", "developers"],
      "agenda": [
        "Sprint goal definition",
        "Story selection",
        "WIP limit discussion"
      ]
    },
    "sprint_review": {
      "frequency": "sprint_end",
      "duration": "1_hour",
      "format": "demonstration_and_feedback",
      "participants": ["all_team_members", "stakeholders"],
      "agenda": [
        "Demo completed work",
        "Gather feedback"
      ]
    },
    "retrospective": {
      "frequency": "sprint_end",
      "duration": "45_minutes",
      "format": "reflection_and_improvement",
      "participants": ["all_team_members"],
      "agenda": [
        "What went well",
        "What could improve",
        "Process adjustments"
      ]
    },
    "backlog_refinement": {
      "frequency": "weekly",
      "duration": "1_hour",
      "format": "story_grooming",
      "participants": ["product_owner", "developers"],
      "agenda": [
        "Review and refine stories",
        "Estimate new items",
        "Clarify requirements"
      ]
    }
  },
  "roles": {
    "product_owner": {
      "responsibilities": [
        "backlog_prioritization",
        "user_story_creation",
        "acceptance_criteria_definition"
      ],
      "required": true
    },
    "scrum_master": {
      "responsibilities": [
        "ceremony_facilitation",
        "flow_optimization",
        "wip_limit_management"
      ],
      "required": true
    },
    "developers": {
      "responsibilities": [
        "story_implementation",
        "pull_based_work_selection",
        "code_review"
      ],
      "count": "3-9"
    }
  },
  "backlog": {
    "estimation": "story-points",
    "prioritization": "value_and_effort",
    "refinement": {
      "frequency": "weekly",
      "duration": "1_hour"
    }
  },
  "metrics": {
    "velocity": {
      "track": true,
      "target": "stable_or_increasing"
    },
    "burndown": {
      "track": true,
      "chart": "sprint_burndown"
    },
    "lead_time": {
      "track": true,
      "target": "predictable_and_improving"
    },
    "cycle_time": {
      "track": true,
      "target": "stable_with_low_variance"
    },
    "throughput": {
      "track": true,
      "target": "predictable_sustainable_pace"
    },
    "wip": {
      "track": true,
      "target": "within_limits"
    }
  },
  "definition_of_done": [
    "Code reviewed",
    "Tests written and passing",
    "Documentation updated",
    "Deployed to staging"
  ],
  "definition_of_ready": [
    "User story clearly defined",
    "Acceptance criteria specified",
    "Dependencies identified",
    "Estimated"
  ],
  "flow_policies": {
    "work_selection": "pull_based_within_sprint",
    "sprint_boundaries": "flexible_within_reason",
    "continuous_improvement": "sprint_retrospectives_and_flow_reviews"
  }
}
