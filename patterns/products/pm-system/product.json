{
  "metadata": {
    "id": "pm-system",
    "name": "Project Management System",
    "description": "Multi-backend PM system for Cursor Agent Factory supporting GitHub, Jira, Confluence, Azure DevOps, and Linear",
    "version": "1.0.0",
    "optional": true
  },
  "backends": [
    {
      "id": "github",
      "name": "GitHub",
      "description": "GitHub Issues and Projects",
      "mcpServer": "github",
      "capabilities": ["issues", "projects", "milestones", "labels", "wiki"]
    },
    {
      "id": "jira",
      "name": "Jira",
      "description": "Atlassian Jira for issue tracking",
      "mcpServer": "atlassian",
      "capabilities": ["epics", "stories", "tasks", "bugs", "sprints", "boards"]
    },
    {
      "id": "confluence",
      "name": "Confluence",
      "description": "Atlassian Confluence for documentation",
      "mcpServer": "atlassian",
      "capabilities": ["pages", "spaces", "templates", "macros"]
    },
    {
      "id": "azure-devops",
      "name": "Azure DevOps",
      "description": "Microsoft Azure DevOps for work tracking",
      "mcpServer": "azure-devops",
      "capabilities": ["work-items", "boards", "sprints", "repos", "pipelines"]
    },
    {
      "id": "linear",
      "name": "Linear",
      "description": "Linear for modern issue tracking",
      "mcpServer": "linear",
      "capabilities": ["issues", "cycles", "projects", "roadmaps"]
    }
  ],
  "methodologies": ["scrum", "kanban", "waterfall", "hybrid", "safe"],
  "components": {
    "agents": [
      {
        "patternId": "product-owner",
        "required": false,
        "description": "Manages backlog and product requirements"
      },
      {
        "patternId": "scrum-master",
        "required": false,
        "description": "Facilitates ceremonies and removes blockers"
      },
      {
        "patternId": "project-manager",
        "required": false,
        "description": "Coordinates project activities and timelines"
      }
    ],
    "skills": [
      {
        "patternId": "backlog-management",
        "required": true,
        "description": "Manage and prioritize backlog items"
      },
      {
        "patternId": "sprint-planning",
        "required": false,
        "description": "Plan sprints and estimate work"
      },
      {
        "patternId": "burndown-tracking",
        "required": false,
        "description": "Track sprint progress and velocity"
      },
      {
        "patternId": "kanban-flow",
        "required": false,
        "description": "Manage Kanban board and flow metrics"
      },
      {
        "patternId": "issue-sync",
        "required": true,
        "description": "Sync issues between Cursor and PM backend"
      }
    ],
    "templates": [
      {
        "patternId": "user-story",
        "category": "document",
        "description": "User story template"
      },
      {
        "patternId": "sprint-plan",
        "category": "document",
        "description": "Sprint planning document template"
      },
      {
        "patternId": "retrospective",
        "category": "document",
        "description": "Sprint retrospective template"
      },
      {
        "patternId": "epic",
        "category": "document",
        "description": "Epic definition template"
      },
      {
        "patternId": "task-breakdown",
        "category": "document",
        "description": "Task breakdown structure template"
      }
    ],
    "mcpConfigs": [
      {
        "name": "atlassian",
        "url": "https://mcp.atlassian.com/v1/sse",
        "purpose": "Jira and Confluence integration",
        "required": false
      },
      {
        "name": "github",
        "url": "https://api.github.com",
        "purpose": "GitHub Issues and Projects",
        "required": false
      },
      {
        "name": "azure-devops",
        "url": "https://dev.azure.com",
        "purpose": "Azure DevOps work items",
        "required": false
      },
      {
        "name": "linear",
        "url": "https://api.linear.app",
        "purpose": "Linear issue tracking",
        "required": false
      }
    ]
  }
}
