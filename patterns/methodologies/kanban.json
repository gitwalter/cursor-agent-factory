{
  "$schema": "./methodology-pattern.json",
  "methodologyId": "kanban",
  "name": "Kanban Flow",
  "pattern": "continuous_flow + pull_based_work",
  "maturity": "proven",
  "use_cases": [
    "Support and maintenance teams",
    "Operations-focused development",
    "Continuous delivery environments",
    "Work with unpredictable demand",
    "Teams transitioning from waterfall"
  ],
  "agents": {
    "service_delivery_manager": {
      "role": "Flow Optimization and Service Delivery",
      "responsibilities": [
        "flow_metrics_monitoring",
        "bottleneck_identification",
        "wip_limit_management",
        "service_level_agreement_tracking"
      ],
      "authority_level": "process_decisions",
      "communication_style": "analytical_facilitative"
    },
    "team_members": {
      "role": "Work Item Execution",
      "count": "4-8",
      "responsibilities": [
        "work_item_completion",
        "wip_limit_adherence",
        "pull_based_work_selection",
        "continuous_improvement_participation"
      ],
      "authority_level": "task_execution",
      "communication_style": "collaborative_self_organizing"
    }
  },
  "ceremonies": {
    "daily_standup": {
      "frequency": "daily",
      "duration": "15_minutes",
      "format": "board_walk",
      "participants": ["all_team_members"],
      "agenda": [
        "Walk the board right to left",
        "Identify blocked items",
        "Balance workload"
      ]
    },
    "replenishment_meeting": {
      "frequency": "as_needed",
      "duration": "30_minutes",
      "format": "backlog_selection",
      "participants": ["service_delivery_manager", "stakeholders"],
      "agenda": [
        "Review completed work",
        "Select new items for ready column",
        "Priority adjustments"
      ]
    },
    "service_delivery_review": {
      "frequency": "bi_weekly",
      "duration": "1_hour",
      "format": "metrics_review",
      "participants": ["all_team_members", "stakeholders"],
      "agenda": [
        "Lead time and cycle time trends",
        "Throughput analysis",
        "SLA performance"
      ]
    },
    "operations_review": {
      "frequency": "monthly",
      "duration": "2_hours",
      "format": "system_improvement",
      "participants": ["all_team_members"],
      "agenda": [
        "Bottleneck analysis",
        "Policy changes",
        "Process experiments"
      ]
    }
  },
  "board_configuration": {
    "columns": [
      {"name": "Backlog", "wip_limit": null, "type": "input_queue"},
      {"name": "Ready", "wip_limit": 5, "type": "commitment_point"},
      {"name": "In Progress", "wip_limit": 3, "type": "work_column"},
      {"name": "Review", "wip_limit": 2, "type": "work_column"},
      {"name": "Done", "wip_limit": null, "type": "output_queue"}
    ],
    "classes_of_service": [
      {"name": "Expedite", "sla": "1_day", "color": "red"},
      {"name": "Standard", "sla": "5_days", "color": "blue"},
      {"name": "Fixed Date", "sla": "by_date", "color": "purple"},
      {"name": "Intangible", "sla": "none", "color": "gray"}
    ]
  },
  "quality_gates": {
    "definition_of_ready": "item_clearly_defined_and_estimated",
    "definition_of_done": "tested_reviewed_and_deployable",
    "wip_limits": "enforced_with_explicit_policy_for_exceptions"
  },
  "metrics": {
    "lead_time": {
      "definition": "time_from_commitment_to_delivery",
      "target": "predictable_and_improving"
    },
    "cycle_time": {
      "definition": "time_from_start_to_completion",
      "target": "stable_with_low_variance"
    },
    "throughput": {
      "definition": "items_completed_per_time_period",
      "target": "predictable_sustainable_pace"
    },
    "wip": {
      "definition": "work_in_progress_at_any_time",
      "target": "within_limits"
    }
  },
  "coordination": {
    "work_selection": "pull_based_from_ready_column",
    "bottleneck_handling": "swarm_to_resolve_blockers",
    "escalation": "explicit_policies_for_blocked_items",
    "continuous_improvement": "evolutionary_change_via_experiments"
  },
  "axiom_alignment": {
    "A1_verifiability": "Metrics-driven decisions with visible board state",
    "A2_user_primacy": "Classes of service prioritize by business impact",
    "A3_transparency": "Visual board makes all work and blockers visible",
    "A4_non_harm": "WIP limits prevent overload and quality degradation",
    "A5_consistency": "Explicit policies ensure consistent behavior"
  }
}
