{
  "$schema": "./methodology-pattern.json",
  "methodologyId": "agile-scrum",
  "name": "Agile Development Swarm",
  "pattern": "domain_expert_swarm + peer_collaboration",
  "maturity": "proven",
  "use_cases": [
    "Product development",
    "Feature-driven development",
    "Team-based software projects",
    "Iterative delivery requirements"
  ],
  "agents": {
    "product_owner": {
      "role": "Product Strategy and Requirements",
      "responsibilities": [
        "user_story_creation",
        "backlog_prioritization",
        "acceptance_criteria_definition"
      ],
      "authority_level": "product_decisions",
      "communication_style": "strategic_collaborative"
    },
    "tech_lead": {
      "role": "Technical Architecture and Code Quality",
      "responsibilities": [
        "technical_design_decisions",
        "code_review_oversight",
        "technical_debt_management"
      ],
      "authority_level": "technical_decisions",
      "communication_style": "authoritative_mentoring"
    },
    "developers": {
      "role": "Feature Implementation and Testing",
      "count": "3-6",
      "responsibilities": [
        "user_story_implementation",
        "unit_test_development",
        "code_review_participation"
      ],
      "authority_level": "implementation_decisions",
      "communication_style": "collaborative_technical"
    },
    "qa_engineer": {
      "role": "Quality Assurance and Testing",
      "responsibilities": [
        "test_plan_development",
        "automated_test_creation",
        "quality_metrics_monitoring"
      ],
      "authority_level": "quality_decisions",
      "communication_style": "rigorous_analytical"
    }
  },
  "ceremonies": {
    "daily_standup": {
      "frequency": "daily",
      "duration": "15_minutes",
      "format": "structured_updates",
      "participants": ["all_team_members"],
      "agenda": [
        "What I completed yesterday",
        "What I'm working on today",
        "Any blockers"
      ]
    },
    "sprint_planning": {
      "frequency": "sprint_start",
      "duration": "2-4_hours",
      "format": "collaborative_planning",
      "participants": ["product_owner", "tech_lead", "developers", "qa_engineer"],
      "agenda": [
        "Sprint goal definition",
        "Story selection and estimation",
        "Task breakdown"
      ]
    },
    "sprint_review": {
      "frequency": "sprint_end",
      "duration": "1-2_hours",
      "format": "demonstration_and_feedback",
      "participants": ["all_team_members", "stakeholders"],
      "agenda": [
        "Demo completed work",
        "Gather feedback",
        "Discuss next priorities"
      ]
    },
    "retrospective": {
      "frequency": "sprint_end",
      "duration": "1_hour",
      "format": "reflection_and_improvement",
      "participants": ["all_team_members"],
      "agenda": [
        "What went well",
        "What could improve",
        "Action items for next sprint"
      ]
    }
  },
  "quality_gates": {
    "code_quality": "automated_linting_and_peer_review",
    "test_coverage": "automated_coverage_reporting",
    "functionality": "qa_validation_and_acceptance_testing",
    "documentation": "inline_documentation_and_api_docs"
  },
  "metrics": {
    "velocity": {
      "definition": "story_points_completed_per_sprint",
      "target": "stable_or_increasing",
      "measurement": "end_of_sprint"
    },
    "quality": {
      "measures": ["bug_rate", "test_coverage", "review_cycles"],
      "target": "bug_rate_decreasing_coverage_increasing"
    },
    "team_health": {
      "measures": ["satisfaction", "psychological_safety", "learning_rate"],
      "target": "high_satisfaction_continuous_learning"
    }
  },
  "coordination": {
    "decision_making": {
      "product_decisions": "product_owner_with_stakeholder_input",
      "technical_decisions": "tech_lead_with_team_consensus",
      "implementation_decisions": "developer_autonomy_with_peer_review"
    },
    "communication_channels": {
      "async": "slack_or_teams_with_dedicated_channels",
      "sync": "daily_standups_and_ceremonies",
      "documentation": "wiki_or_confluence"
    }
  },
  "axiom_alignment": {
    "A1_verifiability": "Sprint demos verify work against acceptance criteria",
    "A2_user_primacy": "User stories keep focus on user value",
    "A3_transparency": "Standups and retrospectives ensure visibility",
    "A4_non_harm": "Code review and QA prevent harmful changes",
    "A5_consistency": "Definition of Done ensures consistent quality"
  }
}
