{
  "$schema": "./enforcement-pattern.json",
  "title": "Integrity Enforcement Patterns",
  "description": "Patterns that ensure our system remains true to its foundational principles",
  "version": "1.0.0",
  "philosophy": "Integrity is doing the right thing, even when no one is watching. - C.S. Lewis",
  "enforcements": [
    {
      "enforcementId": "E9_axiom_compliance",
      "name": "Axiom Compliance Check",
      "category": "integrity",
      "axiom_basis": ["A5_consistency"],
      "trigger": "When new rules or behaviors are proposed",
      "description": "Ensures all rules trace to and align with foundational axioms",
      "checks": [
        {
          "checkId": "axiom_traceable",
          "description": "Rule traces to at least one axiom",
          "condition": "axiom_references.length >= 1",
          "severity": "blocking"
        },
        {
          "checkId": "no_axiom_contradiction",
          "description": "Rule does not contradict any axiom",
          "condition": "axiom_conflicts.length == 0",
          "severity": "blocking"
        },
        {
          "checkId": "derivation_valid",
          "description": "Rule follows logically from premises",
          "condition": "derivation_valid == true",
          "severity": "blocking"
        }
      ],
      "actions": {
        "on_pass": "Accept rule into system",
        "on_fail": "Reject rule, explain violation",
        "on_override": "Not allowed - axioms are immutable"
      },
      "override_policy": "never"
    },
    {
      "enforcementId": "E10_purpose_alignment",
      "name": "Purpose Alignment Check",
      "category": "integrity",
      "axiom_basis": ["A2_user_primacy", "A5_consistency"],
      "trigger": "When major features or changes are proposed",
      "description": "Ensures our work serves our stated purpose and stakeholders",
      "checks": [
        {
          "checkId": "serves_stakeholders",
          "description": "Change benefits identified stakeholders",
          "condition": "stakeholder_benefit_identified == true",
          "severity": "warning"
        },
        {
          "checkId": "aligns_with_mission",
          "description": "Change aligns with mission statement",
          "condition": "mission_alignment_score >= 0.7",
          "severity": "advisory"
        },
        {
          "checkId": "moves_toward_success",
          "description": "Change contributes to success criteria",
          "condition": "success_contribution_identified == true",
          "severity": "advisory"
        }
      ],
      "actions": {
        "on_pass": "Proceed with implementation",
        "on_fail": "Review purpose alignment, clarify value",
        "on_override": "Document strategic exception"
      },
      "override_policy": "with_justification"
    },
    {
      "enforcementId": "E11_transparency_log",
      "name": "Decision Transparency Log",
      "category": "integrity",
      "axiom_basis": ["A3_transparency"],
      "trigger": "When significant decisions are made",
      "description": "Ensures our reasoning is visible and reviewable",
      "checks": [
        {
          "checkId": "decision_documented",
          "description": "Decision is documented with rationale",
          "condition": "decision_log_entry_exists == true",
          "severity": "warning"
        },
        {
          "checkId": "alternatives_considered",
          "description": "Alternative options were considered",
          "condition": "alternatives_documented == true",
          "severity": "advisory"
        },
        {
          "checkId": "stakeholders_informed",
          "description": "Affected stakeholders are informed",
          "condition": "stakeholder_notification == true",
          "severity": "advisory"
        }
      ],
      "actions": {
        "on_pass": "Decision logged and communicated",
        "on_fail": "Add missing documentation",
        "on_override": "Log gap, schedule documentation"
      },
      "override_policy": "with_justification"
    }
  ]
}
