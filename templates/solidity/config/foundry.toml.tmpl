# Foundry Configuration
# Generated by Cursor Agent Factory - Solidity Ethereum Blueprint
# 
# Documentation: https://book.getfoundry.sh/config/

[profile.default]
# Source files
src = "contracts"
out = "out"
libs = ["lib"]
test = "test"
script = "scripts"

# Compiler settings
solc_version = "{{SOLIDITY_VERSION}}"
optimizer = true
optimizer_runs = 200
via_ir = true
evm_version = "cancun"

# Testing
fuzz = { runs = 1000, max_test_rejects = 65536 }
invariant = { runs = 256, depth = 15 }
verbosity = 2

# Gas reporting
gas_reports = ["*"]

# Formatter
fmt = { line_length = 100, tab_width = 4, bracket_spacing = true }

# Remappings
remappings = [
    "@openzeppelin/=lib/openzeppelin-contracts/",
    "@chainlink/=lib/chainlink/",
    "forge-std/=lib/forge-std/src/"
]

# RPC endpoints
[rpc_endpoints]
mainnet = "${MAINNET_RPC_URL}"
sepolia = "${SEPOLIA_RPC_URL}"
goerli = "${GOERLI_RPC_URL}"
polygon = "${POLYGON_RPC_URL}"
arbitrum = "${ARBITRUM_RPC_URL}"
optimism = "${OPTIMISM_RPC_URL}"
base = "${BASE_RPC_URL}"
localhost = "http://127.0.0.1:8545"

# Etherscan API keys for verification
[etherscan]
mainnet = { key = "${ETHERSCAN_API_KEY}" }
sepolia = { key = "${ETHERSCAN_API_KEY}" }
polygon = { key = "${POLYGONSCAN_API_KEY}" }
arbitrum = { key = "${ARBISCAN_API_KEY}" }
optimism = { key = "${OPTIMISM_API_KEY}" }
base = { key = "${BASESCAN_API_KEY}" }

# CI/CD profile - higher fuzz runs
[profile.ci]
fuzz = { runs = 10000 }
invariant = { runs = 1000 }
verbosity = 3

# Fast compilation for development
[profile.dev]
optimizer = false
fuzz = { runs = 100 }

# Production - maximum optimization
[profile.production]
optimizer = true
optimizer_runs = 1000000
via_ir = true
