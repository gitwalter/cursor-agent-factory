{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "{{TOOL_NAME}} - MCP Tool Definition",
  "description": "{{TOOL_DESCRIPTION}}",
  "version": "1.0.0",
  "author": "{{AUTHOR}}",
  "date": "{{DATE}}",
  "tool": {
    "name": "{{TOOL_NAME}}",
    "description": "{{TOOL_DESCRIPTION}}",
    "inputSchema": {
      "type": "object",
      "properties": {
        "{{PARAMETER_1_NAME}}": {
          "type": "{{PARAMETER_1_TYPE}}",
          "description": "{{PARAMETER_1_DESCRIPTION}}",
          {{#IF PARAMETER_1_REQUIRED}}
          "required": true
          {{/IF}}
        },
        "{{PARAMETER_2_NAME}}": {
          "type": "{{PARAMETER_2_TYPE}}",
          "description": "{{PARAMETER_2_DESCRIPTION}}",
          "default": "{{PARAMETER_2_DEFAULT}}",
          {{#IF PARAMETER_2_HAS_CONSTRAINTS}}
          "minimum": {{PARAMETER_2_MIN}},
          "maximum": {{PARAMETER_2_MAX}}
          {{/IF}}
        }
      },
      "required": ["{{PARAMETER_1_NAME}}"]
    },
    "examples": [
      {
        "name": "{{EXAMPLE_1_NAME}}",
        "input": {
          "{{PARAMETER_1_NAME}}": "{{EXAMPLE_1_VALUE_1}}",
          "{{PARAMETER_2_NAME}}": "{{EXAMPLE_1_VALUE_2}}"
        },
        "expected_output": "{{EXAMPLE_1_OUTPUT}}"
      }
    ],
    "errorHandling": {
      "errors": [
        {
          "code": "INVALID_INPUT",
          "message": "Input parameter is invalid",
          "handling": "Return error message to caller"
        },
        {
          "code": "EXECUTION_ERROR",
          "message": "Tool execution failed",
          "handling": "Log error and return safe error response"
        }
      ]
    },
    "axiomAlignment": {
      "A1_verifiability": "Tool outputs are logged and traceable",
      "A3_transparency": "Tool behavior is explicit and documented",
      "A4_non_harm": "Input validation prevents harmful operations"
    }
  }
}
