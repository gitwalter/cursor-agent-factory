{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "{{DATASET_NAME}} - Evaluation Dataset",
  "description": "{{DATASET_DESCRIPTION}}",
  "version": "1.0.0",
  "author": "{{AUTHOR}}",
  "date": "{{DATE}}",
  "axiomAlignment": {
    "A1_verifiability": "Dataset enables reproducible evaluation",
    "A3_transparency": "Dataset structure is explicit"
  },
  "metadata": {
    "total_examples": {{TOTAL_EXAMPLES}},
    "categories": ["{{CATEGORY_1}}", "{{CATEGORY_2}}"],
    "difficulty_levels": ["easy", "medium", "hard"],
    "evaluation_metrics": [
      "accuracy",
      "relevance",
      "completeness",
      "correctness"
    ]
  },
  "examples": [
    {
      "id": "example_1",
      "category": "{{CATEGORY_1}}",
      "difficulty": "easy",
      "input": {
        "text": "{{EXAMPLE_1_INPUT}}",
        "context": "{{EXAMPLE_1_CONTEXT}}"
      },
      "expected_output": {
        "text": "{{EXAMPLE_1_EXPECTED_OUTPUT}}",
        "reasoning": "{{EXAMPLE_1_REASONING}}"
      },
      "evaluation_criteria": {
        "must_include": ["{{CRITERION_1}}", "{{CRITERION_2}}"],
        "must_not_include": ["{{FORBIDDEN_1}}"],
        "min_length": {{MIN_LENGTH}},
        "max_length": {{MAX_LENGTH}}
      },
      "metadata": {
        "source": "{{SOURCE_1}}",
        "tags": ["{{TAG_1}}", "{{TAG_2}}"]
      }
    },
    {
      "id": "example_2",
      "category": "{{CATEGORY_2}}",
      "difficulty": "medium",
      "input": {
        "text": "{{EXAMPLE_2_INPUT}}",
        "context": "{{EXAMPLE_2_CONTEXT}}"
      },
      "expected_output": {
        "text": "{{EXAMPLE_2_EXPECTED_OUTPUT}}",
        "reasoning": "{{EXAMPLE_2_REASONING}}"
      },
      "evaluation_criteria": {
        "must_include": ["{{CRITERION_3}}"],
        "must_not_include": [],
        "min_length": {{MIN_LENGTH}},
        "max_length": {{MAX_LENGTH}}
      },
      "metadata": {
        "source": "{{SOURCE_2}}",
        "tags": ["{{TAG_3}}"]
      }
    }
  ],
  "evaluation_config": {
    "scoring": {
      "method": "{{SCORING_METHOD}}",
      "weights": {
        "accuracy": 0.4,
        "relevance": 0.3,
        "completeness": 0.2,
        "correctness": 0.1
      }
    },
    "comparison": {
      "baseline_model": "{{BASELINE_MODEL}}",
      "comparison_metrics": ["accuracy", "latency"]
    }
  }
}
