name: Node.js Test Workflow

on:
  workflow_call:
    inputs:
      node-version:
        description: 'Node.js version to use'
        required: false
        type: string
        default: '20'
      package-manager:
        description: 'Package manager to use (npm, yarn, pnpm)'
        required: false
        type: string
        default: 'npm'
      test-command:
        description: 'Command to run tests'
        required: false
        type: string
        default: 'npm test'
      lint-command:
        description: 'Command to run linter'
        required: false
        type: string
        default: 'npm run lint'
      build-command:
        description: 'Command to build project'
        required: false
        type: string
        default: 'npm run build'
      matrix-node-versions:
        description: 'Comma-separated Node versions for matrix testing'
        required: false
        type: string
        default: '20'
      install-command:
        description: 'Command to install dependencies'
        required: false
        type: string
        default: 'npm ci'
      run-build:
        description: 'Run build step before tests'
        required: false
        type: boolean
        default: true
      run-lint:
        description: 'Run linting step'
        required: false
        type: boolean
        default: true

jobs:
  test:
    name: Test Node.js ${{ matrix.node-version }}
    runs-on: ubuntu-latest
    permissions:
      contents: read
      pull-requests: write
    strategy:
      fail-fast: false
      matrix:
        node-version: ${{ fromJSON(format('["{0}"]', inputs.matrix-node-versions)) }}
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Set up Node.js ${{ matrix.node-version }}
        uses: actions/setup-node@v4
        with:
          node-version: ${{ matrix.node-version }}
          cache: ${{ inputs.package-manager }}

      - name: Install dependencies
        run: ${{ inputs.install-command }}

      - name: Run linter
        if: inputs.run-lint
        continue-on-error: true
        run: ${{ inputs.lint-command }}

      - name: Run build
        if: inputs.run-build
        run: ${{ inputs.build-command }}

      - name: Run tests
        run: ${{ inputs.test-command }}

      - name: Upload test results
        if: always()
        uses: actions/upload-artifact@v4
        with:
          name: test-results-${{ matrix.node-version }}
          path: |
            coverage/
            test-results/
            *.xml
          if-no-files-found: ignore
          retention-days: 30

      - name: Comment PR with test results
        if: github.event_name == 'pull_request' && always()
        uses: actions/github-script@v7
        with:
          script: |
            const fs = require('fs');
            const path = require('path');
            
            // Try to find test result files
            const testResultsPath = path.join(process.cwd(), 'test-results');
            if (fs.existsSync(testResultsPath)) {
              const files = fs.readdirSync(testResultsPath);
              console.log('Test result files found:', files);
            }
