name: .NET Build Workflow

on:
  workflow_call:
    inputs:
      dotnet-version:
        description: '.NET SDK version to use'
        required: false
        type: string
        default: '8.0'
      test-command:
        description: 'Command to run tests'
        required: false
        type: string
        default: 'dotnet test'
      build-command:
        description: 'Command to build project'
        required: false
        type: string
        default: 'dotnet build'
      publish-command:
        description: 'Command to publish project'
        required: false
        type: string
        default: 'dotnet publish'
      matrix-dotnet-versions:
        description: 'Comma-separated .NET versions for matrix testing'
        required: false
        type: string
        default: '8.0'
      solution-path:
        description: 'Path to solution file'
        required: false
        type: string
        default: '*.sln'
      run-tests:
        description: 'Run tests'
        required: false
        type: boolean
        default: true
      run-publish:
        description: 'Run publish step'
        required: false
        type: boolean
        default: false
      publish-artifacts:
        description: 'Publish build artifacts'
        required: false
        type: boolean
        default: false

jobs:
  build:
    name: Build .NET ${{ matrix.dotnet-version }}
    runs-on: ubuntu-latest
    permissions:
      contents: read
      packages: write
    strategy:
      fail-fast: false
      matrix:
        dotnet-version: ${{ fromJSON(format('["{0}"]', inputs.matrix-dotnet-versions)) }}
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Set up .NET SDK ${{ matrix.dotnet-version }}
        uses: actions/setup-dotnet@v4
        with:
          dotnet-version: ${{ matrix.dotnet-version }}

      - name: Cache NuGet packages
        uses: actions/cache@v4
        with:
          path: ~/.nuget/packages
          key: ${{ runner.os }}-nuget-${{ hashFiles('**/*.csproj') }}
          restore-keys: |
            ${{ runner.os }}-nuget-

      - name: Restore dependencies
        run: dotnet restore ${{ inputs.solution-path }}

      - name: Build project
        run: ${{ inputs.build-command }} ${{ inputs.solution-path }} --configuration Release --no-restore

      - name: Run tests
        if: inputs.run-tests
        run: |
          ${{ inputs.test-command }} ${{ inputs.solution-path }} \
            --configuration Release \
            --no-build \
            --verbosity normal \
            --collect:"XPlat Code Coverage" \
            --results-directory:./TestResults

      - name: Upload test results
        if: inputs.run-tests && always()
        uses: actions/upload-artifact@v4
        with:
          name: test-results-${{ matrix.dotnet-version }}
          path: |
            **/TestResults/**/*
            **/coverage.cobertura.xml
          if-no-files-found: ignore
          retention-days: 30

      - name: Publish project
        if: inputs.run-publish
        run: |
          ${{ inputs.publish-command }} ${{ inputs.solution-path }} \
            --configuration Release \
            --output ./publish

      - name: Upload build artifacts
        if: inputs.publish-artifacts && success()
        uses: actions/upload-artifact@v4
        with:
          name: build-artifacts-${{ matrix.dotnet-version }}
          path: |
            **/publish/**
            **/bin/Release/**
          retention-days: 7

      - name: Publish to NuGet
        if: inputs.publish-artifacts && github.ref == 'refs/heads/main' && success()
        continue-on-error: true
        env:
          NUGET_AUTH_TOKEN: ${{ secrets.NUGET_AUTH_TOKEN }}
        run: |
          if [ -n "$NUGET_AUTH_TOKEN" ]; then
            dotnet nuget push **/*.nupkg \
              --source https://api.nuget.org/v3/index.json \
              --api-key $NUGET_AUTH_TOKEN \
              --skip-duplicate
          fi
