using { ${NAMESPACE} } from '../db/schema';

/**
 * ${SERVICE_NAME} service definition.
 * 
 * Services define which entities are exposed via OData and can include:
 * - Entity projections (expose entities with field selection)
 * - Actions and Functions (custom operations)
 * - Annotations (UI hints, validations, etc.)
 * 
 * Service name becomes part of the OData service URL:
 * /odata/v4/${SERVICE_NAME}/
 */
service ${SERVICE_NAME} {
    /**
     * Expose entity as-is
     * 
     * This creates standard CRUD operations:
     * - GET /${SERVICE_NAME}/${ENTITY_NAME} - Read all
     * - GET /${SERVICE_NAME}/${ENTITY_NAME}({id}) - Read one
     * - POST /${SERVICE_NAME}/${ENTITY_NAME} - Create
     * - PATCH /${SERVICE_NAME}/${ENTITY_NAME}({id}) - Update
     * - DELETE /${SERVICE_NAME}/${ENTITY_NAME}({id}) - Delete
     */
    entity ${ENTITY_NAME} as projection on ${NAMESPACE}.${ENTITY_NAME};

