{
  "name": "${PROJECT_NAME}",
  "version": "${VERSION:1.0.0}",
  "description": "${PROJECT_DESCRIPTION}",
  "repository": {
    "type": "git",
    "url": "${REPOSITORY_URL}"
  },
  "license": "${LICENSE:UNLICENSED}",
  "private": true,
  "dependencies": {
    "@sap/cds": "${CDS_VERSION:^7}",
    "@sap/cds-hana": "${CDS_HANA_VERSION:^2}",
    "@sap/xssec": "${XSSEC_VERSION:^3}",
    "express": "${EXPRESS_VERSION:^4}",
    "passport": "${PASSPORT_VERSION:^0}",
    "axios": "${AXIOS_VERSION:^1}"
  },
  "devDependencies": {
    "@sap/cds-dk": "${CDS_DK_VERSION:^7}",
    "@cap-js/sqlite": "${SQLITE_VERSION:^1}",
    "jest": "${JEST_VERSION:^29}",
    "@types/jest": "${JEST_TYPES_VERSION:^29}",
    "@types/node": "${NODE_TYPES_VERSION:^20}",
    "eslint": "${ESLINT_VERSION:^8}",
    "@typescript-eslint/eslint-plugin": "${TS_ESLINT_PLUGIN_VERSION:^6}",
    "@typescript-eslint/parser": "${TS_ESLINT_PARSER_VERSION:^6}",
    "typescript": "${TYPESCRIPT_VERSION:^5}"
  },
  "scripts": {
    "start": "cds run",
    "watch": "cds watch",
    "build": "cds build",
    "deploy": "cds deploy --to hana",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit"
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "${DB_KIND:sqlite}",
        "[production]": {
          "kind": "hana"
        }
      },
      "auth": {
        "[production]": {
          "kind": "xsuaa"
        }
      }
    },
    "profiles": {
      "production": {
        "requires": {
          "db": {
            "kind": "hana"
          },
          "auth": {
            "kind": "xsuaa"
          }
        }
      }
    }
  },
  "engines": {
    "node": "${NODE_VERSION:>=18}",
    "npm": "${NPM_VERSION:>=9}"
  }
}
