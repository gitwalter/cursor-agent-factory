"! <p class="shorttext synchronized">Base CDS Entity with Audit Fields</p>
"! CDS entity definition for ${ENTITY_NAME} with standard audit fields
"! @author ${AUTHOR}
"! @date ${DATE}
"! @version 1.0
"!
"! Example usage:
"!   Replace ${ENTITY_NAME} with your entity name (e.g., ZI_Travel)
"!   Replace ${TABLE_NAME} with your database table (e.g., ZTRAVEL)
"!   Add your business fields after the audit fields
"!
@EndUserText.label: '${ENTITY_DESCRIPTION}'
@AccessControl.authorizationCheck: #CHECK
@Metadata.allowExtensions: true
define root entity ${ENTITY_NAME}
  as projection on ${TABLE_NAME}
{
  // Key fields
  key ${KEY_FIELD_1} : ${DATA_TYPE_1};
  key ${KEY_FIELD_2} : ${DATA_TYPE_2};
  
  // Business fields
  ${BUSINESS_FIELD_1} : ${DATA_TYPE_3};
  ${BUSINESS_FIELD_2} : ${DATA_TYPE_4};
  ${BUSINESS_FIELD_3} : ${DATA_TYPE_5};
  
  // Audit fields - Created
  @Semantics.systemDateTime.createdAt: true
  created_at : abp_creation_tstmpl;
  
  @Semantics.user.createdBy: true
  created_by : abp_creation_user;
  
  // Audit fields - Changed
  @Semantics.systemDateTime.lastChangedAt: true
  last_changed_at : abp_lastchange_tstmpl;
  
  @Semantics.user.lastChangedBy: true
  last_changed_by : abp_lastchange_user;
  
  // Local instance last changed
  @Semantics.systemDateTime.localInstanceLastChangedAt: true
  local_last_changed_at : abp_locinst_lastchange_tstmpl;
  
  // ETag for optimistic locking
  @Semantics.systemDateTime.lastChangedAt: true
  etag : abp_entity_etag;
  
  // Associations
  // association _${ASSOCIATION_NAME} as ${ASSOCIATION_TYPE} on ${CONDITION} = ${TARGET_KEY};
  
}
