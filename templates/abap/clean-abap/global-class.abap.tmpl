"! <p class="shorttext synchronized">${CLASS_DESCRIPTION}</p>
"! General purpose ABAP class
"! @author ${AUTHOR}
"! @date ${DATE}
"! @version 1.0
"!
"! Purpose: ${PURPOSE}
"!
"! Example usage:
"!   DATA(instance) = NEW ${CLASS_NAME}( ).
"!   DATA(result) = instance->${METHOD_NAME}( ${PARAMETER_NAME} = 'value' ).
"!
CLASS ${CLASS_NAME} DEFINITION PUBLIC FINAL CREATE PUBLIC.
  PUBLIC SECTION.
    "! Public method example
    "! @parameter ${PARAMETER_NAME} | Input parameter description
    "! @parameter result | Return value description
    "! @raising ${EXCEPTION_CLASS_NAME} | Exception description
    METHODS ${METHOD_NAME}
      IMPORTING
        ${PARAMETER_NAME} TYPE ${PARAMETER_TYPE}
      RETURNING
        VALUE(result) TYPE ${RETURN_TYPE}
      RAISING
        ${EXCEPTION_CLASS_NAME}.
        
    "! Another public method example
    METHODS ${SECOND_METHOD_NAME}
      IMPORTING
        ${SECOND_PARAMETER_NAME} TYPE ${SECOND_PARAMETER_TYPE}
      EXPORTING
        result TYPE ${EXPORT_TYPE}.
        
  PROTECTED SECTION.
    "! Protected method for inheritance
    METHODS ${PROTECTED_METHOD_NAME}
      IMPORTING
        ${PROTECTED_PARAMETER_NAME} TYPE ${PROTECTED_PARAMETER_TYPE}.
        
  PRIVATE SECTION.
    "! Private attribute example
    DATA ${ATTRIBUTE_NAME} TYPE ${ATTRIBUTE_TYPE}.
    
    "! Private method example
    METHODS ${PRIVATE_METHOD_NAME}
      IMPORTING
        ${PRIVATE_PARAMETER_NAME} TYPE ${PRIVATE_PARAMETER_TYPE}
      RETURNING
        VALUE(result) TYPE ${PRIVATE_RETURN_TYPE}.
        
    "! Constants
    CONSTANTS:
      ${CONSTANT_NAME} TYPE ${CONSTANT_TYPE} VALUE ${CONSTANT_VALUE}.
      
ENDCLASS.

CLASS ${CLASS_NAME} IMPLEMENTATION.
  
  METHOD ${METHOD_NAME}.
    " Validate input
    IF ${PARAMETER_NAME} IS INITIAL.
      RAISE EXCEPTION TYPE ${EXCEPTION_CLASS_NAME}
        EXPORTING
          textid = ${EXCEPTION_CLASS_NAME}=>${CONSTANT_NAME}
          previous = VALUE #( ).
    ENDIF.
    
    " Process logic
    result = ${PRIVATE_METHOD_NAME}( ${PARAMETER_NAME} ).
    
    " Additional processing
    ${ATTRIBUTE_NAME} = result.
  ENDMETHOD.
  
  METHOD ${SECOND_METHOD_NAME}.
    " Process and export result
    result = ${PARAMETER_NAME} && ' processed'.
  ENDMETHOD.
  
  METHOD ${PROTECTED_METHOD_NAME}.
    " Protected method implementation
    ${ATTRIBUTE_NAME} = ${PROTECTED_PARAMETER_NAME}.
  ENDMETHOD.
  
  METHOD ${PRIVATE_METHOD_NAME}.
    " Private method implementation
    result = ${PRIVATE_PARAMETER_NAME} && ' processed'.
  ENDMETHOD.
  
ENDCLASS.
