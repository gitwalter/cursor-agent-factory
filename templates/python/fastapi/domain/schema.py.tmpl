class {{REQUEST_SCHEMA}}(BaseModel):
    """
    Request schema for creating/updating {{ENTITY_NAME}}.
    
    This schema defines the structure and validation rules for
    {{ENTITY_NAME}} creation and update requests.
    
    Example:
        >>> request = {{REQUEST_SCHEMA}}(
        >>>     name="Example",
        >>>     description="An example {{ENTITY_NAME}}"
        >>> )
    """
    
    name: str = Field(
        ...,
        min_length=1,
        max_length=255,
        description="{{ENTITY_NAME}} name"
    )
    description: Optional[str] = Field(
        None,
        max_length=1000,
        description="Optional description"
    )
    # Add additional fields as needed
    
