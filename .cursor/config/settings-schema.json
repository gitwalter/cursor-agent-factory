{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://cursor-agent-factory/schemas/settings.json",
  "title": "Cursor Agent Factory Settings Schema",
  "description": "Unified configuration schema for all Cursor Agent Factory settings including tools, credentials, and knowledge evolution",
  "version": "1.0.0",
  "type": "object",
  "required": ["system", "tools"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Settings file version (semver)"
    },
    "system": {
      "type": "object",
      "description": "Core system settings",
      "required": ["factory_version"],
      "properties": {
        "factory_version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$",
          "description": "Cursor Agent Factory version"
        },
        "platform": {
          "type": "string",
          "enum": ["windows", "linux", "darwin"],
          "description": "Operating system platform (auto-detected if not set)"
        },
        "shell": {
          "type": "string",
          "description": "Default shell for command execution"
        },
        "workspace_root": {
          "type": "string",
          "description": "Root directory of the factory workspace"
        }
      }
    },
    "tools": {
      "type": "object",
      "description": "Tool path configuration (migrated from tools.json)",
      "additionalProperties": {
        "$ref": "#/definitions/toolConfig"
      }
    },
    "credentials": {
      "type": "object",
      "description": "API credentials and tokens (references to environment variables)",
      "properties": {
        "github_token": {
          "type": "string",
          "description": "GitHub personal access token for API access (use ${GITHUB_TOKEN})"
        },
        "npm_token": {
          "type": "string",
          "description": "NPM registry token for package info (use ${NPM_TOKEN})"
        },
        "pypi_token": {
          "type": "string",
          "description": "PyPI API token (use ${PYPI_TOKEN})"
        },
        "openai_api_key": {
          "type": "string",
          "description": "OpenAI API key for LLM features (use ${OPENAI_API_KEY})"
        },
        "anthropic_api_key": {
          "type": "string",
          "description": "Anthropic API key for Claude (use ${ANTHROPIC_API_KEY})"
        }
      }
    },
    "knowledge_evolution": {
      "type": "object",
      "description": "Configuration for automatic knowledge updates",
      "properties": {
        "mode": {
          "type": "string",
          "enum": ["stability_first", "awareness_hybrid", "freshness_first", "subscription"],
          "default": "awareness_hybrid",
          "description": "Update behavior mode"
        },
        "check_on_startup": {
          "type": "boolean",
          "default": true,
          "description": "Check for updates when factory starts"
        },
        "auto_update": {
          "type": "boolean",
          "default": false,
          "description": "Automatically apply updates without confirmation"
        },
        "notify_updates": {
          "type": "boolean",
          "default": true,
          "description": "Show notifications when updates are available"
        },
        "update_channel": {
          "type": "string",
          "enum": ["stable", "latest", "experimental"],
          "default": "stable",
          "description": "Which update channel to follow"
        },
        "check_interval_hours": {
          "type": "integer",
          "minimum": 1,
          "maximum": 168,
          "default": 24,
          "description": "Hours between automatic update checks"
        },
        "subscriptions": {
          "type": "array",
          "description": "Glob patterns for knowledge files to subscribe to",
          "items": {
            "type": "string"
          },
          "default": ["*"],
          "examples": [["python-*", "fastapi-*", "ai-*"]]
        },
        "sources": {
          "type": "object",
          "description": "Enable/disable individual knowledge sources",
          "properties": {
            "github_trending": {
              "type": "boolean",
              "default": true,
              "description": "GitHub trending repos and releases"
            },
            "official_docs": {
              "type": "boolean",
              "default": true,
              "description": "Official framework documentation"
            },
            "package_registries": {
              "type": "boolean",
              "default": true,
              "description": "PyPI, NPM, Maven Central"
            },
            "community_curated": {
              "type": "boolean",
              "default": true,
              "description": "Awesome lists, dev.to, blogs"
            },
            "user_feedback": {
              "type": "boolean",
              "default": true,
              "description": "Feedback from generated projects"
            }
          }
        },
        "merge_strategy": {
          "type": "string",
          "enum": ["conservative", "balanced", "aggressive"],
          "default": "balanced",
          "description": "How to merge conflicting knowledge updates"
        },
        "backup_before_update": {
          "type": "boolean",
          "default": true,
          "description": "Create backup before applying updates"
        },
        "max_backups": {
          "type": "integer",
          "minimum": 1,
          "maximum": 100,
          "default": 10,
          "description": "Maximum number of backups to retain"
        }
      }
    },
    "notifications": {
      "type": "object",
      "description": "Notification preferences",
      "properties": {
        "show_update_summary": {
          "type": "boolean",
          "default": true,
          "description": "Show summary of available updates"
        },
        "show_changelog": {
          "type": "boolean",
          "default": true,
          "description": "Show changelog for updates"
        },
        "quiet_mode": {
          "type": "boolean",
          "default": false,
          "description": "Suppress non-critical notifications"
        }
      }
    },
    "platforms": {
      "type": "object",
      "description": "Platform-specific configuration",
      "properties": {
        "windows": { "$ref": "#/definitions/platformConfig" },
        "linux": { "$ref": "#/definitions/platformConfig" },
        "darwin": { "$ref": "#/definitions/platformConfig" }
      }
    }
  },
  "definitions": {
    "toolConfig": {
      "type": "object",
      "required": ["description"],
      "properties": {
        "path": {
          "type": "string",
          "description": "Explicit path to the tool executable"
        },
        "env_var": {
          "type": "string",
          "pattern": "^[A-Z][A-Z0-9_]*$",
          "description": "Environment variable for path override"
        },
        "conda_env": {
          "type": "string",
          "description": "Conda environment name if applicable"
        },
        "auto_detect": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Commands to try for auto-detection"
        },
        "fallbacks": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Fallback paths to try in order"
        },
        "min_version": {
          "type": "string",
          "description": "Minimum required version"
        },
        "description": {
          "type": "string",
          "description": "Human-readable description"
        },
        "docs": {
          "type": "string",
          "format": "uri",
          "description": "Documentation URL"
        }
      }
    },
    "platformConfig": {
      "type": "object",
      "properties": {
        "shell": {
          "type": "string",
          "description": "Default shell"
        },
        "path_separator": {
          "type": "string",
          "enum": ["/", "\\"],
          "description": "Path separator"
        },
        "env_syntax": {
          "type": "string",
          "description": "Environment variable syntax"
        },
        "default_tools": {
          "type": "object",
          "additionalProperties": { "type": "string" },
          "description": "Default tool paths for this platform"
        }
      }
    }
  }
}
