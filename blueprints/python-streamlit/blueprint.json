{
  "metadata": {
    "blueprintId": "python-streamlit",
    "blueprintName": "Python Streamlit Blueprint",
    "description": "Data applications and dashboards with Python and Streamlit",
    "version": "1.0.0",
    "author": "Cursor Agent Factory",
    "tags": ["python", "streamlit", "data-science", "dashboard", "visualization", "ml"]
  },
  "stack": {
    "primaryLanguage": "python",
    "frameworks": [
      {"name": "Streamlit", "version": "1.28+", "purpose": "Web app framework"},
      {"name": "Pandas", "version": "2.0+", "purpose": "Data manipulation"},
      {"name": "NumPy", "version": "1.24+", "purpose": "Numerical computing"},
      {"name": "Plotly", "version": "5.17+", "purpose": "Interactive visualizations", "optional": true},
      {"name": "scikit-learn", "version": "1.3+", "purpose": "Machine learning", "optional": true},
      {"name": "LangChain", "version": "0.1+", "purpose": "AI agent integration", "optional": true}
    ],
    "databases": [
      {"type": "sql", "name": "SQLite", "purpose": "Local data storage"},
      {"type": "sql", "name": "PostgreSQL", "purpose": "Production database", "optional": true},
      {"type": "nosql", "name": "MongoDB", "purpose": "Document storage", "optional": true}
    ],
    "tools": [
      {"name": "pytest", "purpose": "Testing"},
      {"name": "ruff", "purpose": "Linting"},
      {"name": "black", "purpose": "Formatting"},
      {"name": "mypy", "purpose": "Type checking"},
      {"name": "streamlit-authenticator", "purpose": "Authentication", "optional": true}
    ],
    "styleGuides": [
      {"name": "pep8", "description": "PEP 8 Style Guide", "reference": "https://pep8.org"},
      {"name": "google", "description": "Google Python Style", "reference": "https://google.github.io/styleguide/pyguide.html"}
    ]
  },
  "agents": [
    {"patternId": "code-reviewer", "required": true, "customizations": {"skills": ["clean-code-review", "grounding"]}},
    {"patternId": "test-generator", "required": true, "customizations": {"skills": ["tdd"]}}
  ],
  "skills": [
    {"patternId": "bugfix-workflow", "required": true},
    {"patternId": "feature-workflow", "required": true},
    {"patternId": "grounding", "required": true},
    {"patternId": "tdd", "required": true},
    {"patternId": "code-templates", "required": true}
  ],
  "knowledge": [
    {"filename": "naming-conventions.json", "description": "Python naming conventions"},
    {"filename": "streamlit-patterns.json", "description": "Streamlit patterns and best practices"},
    {"filename": "test-patterns.json", "description": "Pytest patterns"},
    {"filename": "tdd-patterns.json", "description": "Test-driven development patterns"}
  ],
  "templates": {
    "codeTemplates": [
      {"category": "app-main", "directory": "templates/python/streamlit/"},
      {"category": "page", "directory": "templates/python/streamlit/pages/"},
      {"category": "component", "directory": "templates/python/streamlit/components/"},
      {"category": "utility", "directory": "templates/python/streamlit/utils/"},
      {"category": "config", "directory": "templates/python/streamlit/config/"}
    ],
    "documentTemplates": [
      {"name": "implementation_plan.md", "directory": "templates/docs/"},
      {"name": "technical_spec.md", "directory": "templates/docs/"},
      {"name": "test_plan.md", "directory": "templates/docs/"}
    ]
  },
  "workflows": [
    {"patternId": "jira-bugfix", "customizations": {}},
    {"patternId": "confluence-feature", "customizations": {}},
    {"patternId": "github-actions-ci", "customizations": {"template": "templates/workflows/github/ci.yml.tmpl"}}
  ],
  "mcpServers": [
    {"name": "atlassian", "url": "https://mcp.atlassian.com/v1/sse", "purpose": "Jira/Confluence", "required": false},
    {"name": "deepwiki", "url": "https://mcp.deepwiki.com/mcp", "purpose": "GitHub analysis", "required": false}
  ],
  "projectStructure": {
    "directories": [
      {"path": ".cursor/agents/", "purpose": "AI agent definitions"},
      {"path": ".cursor/skills/", "purpose": "Reusable skills"},
      {"path": "knowledge/", "purpose": "Reference data"},
      {"path": "templates/python/", "purpose": "Code templates"},
      {"path": "templates/docs/", "purpose": "Document templates"},
      {"path": "workflows/", "purpose": "Workflow documentation"},
      {"path": "src/", "purpose": "Application source"},
      {"path": "pages/", "purpose": "Streamlit multi-page app pages"},
      {"path": "components/", "purpose": "Reusable Streamlit components"},
      {"path": "utils/", "purpose": "Utility functions and helpers"},
      {"path": "tests/", "purpose": "Test files"},
      {"path": "docs/", "purpose": "Documentation"},
      {"path": "data/", "purpose": "Data files and datasets"},
      {"path": "models/", "purpose": "ML models and artifacts", "optional": true}
    ],
    "files": [
      {"path": ".cursorrules", "purpose": "Agent behavior rules"},
      {"path": "README.md", "purpose": "Project documentation"},
      {"path": "app.py", "purpose": "Main Streamlit app entry point"},
      {"path": "pyproject.toml", "purpose": "Python project config"},
      {"path": "requirements.txt", "purpose": "Dependencies"},
      {"path": ".streamlit/config.toml", "purpose": "Streamlit configuration", "optional": true}
    ]
  },
  "cursorrules": {
    "variables": [
      {"name": "PYTHON_PATH", "description": "Python executable path", "default": "python"},
      {"name": "STYLE_GUIDE", "description": "Coding style", "default": "pep8"},
      {"name": "STREAMLIT_PORT", "description": "Streamlit server port", "default": "8501"}
    ],
    "rules": [
      {"name": "Type Hints", "description": "Always use type hints for function parameters and returns"},
      {"name": "Docstrings", "description": "Use Google-style docstrings"},
      {"name": "Session State", "description": "Initialize session state early and use descriptive keys"},
      {"name": "Caching", "description": "Use @st.cache_data for data and @st.cache_resource for resources"},
      {"name": "Component Structure", "description": "Organize code into pages/, components/, and utils/ directories"},
      {"name": "Multi-page Apps", "description": "Use pages/ directory for multi-page Streamlit applications"},
      {"name": "Testing", "description": "Write pytest tests with fixtures for Streamlit components"},
      {"name": "Error Handling", "description": "Handle errors gracefully with try-except blocks and user-friendly messages"}
    ]
  }
}
