    {"patternId": "security-auditor", "required": true, "customizations": {"focus": "defi-security"}},
    {"patternId": "test-generator", "required": true, "customizations": {"skills": ["smart-contract-testing"]}},
    {"patternId": "explorer", "required": false, "customizations": {"focus": "defi-protocols"}}
