  "cursorrules": {
    "variables": [
      {"name": "PYTHON_PATH", "description": "Python executable", "default": "python"},
      {"name": "HF_TOKEN", "description": "Hugging Face token", "default": ""},
      {"name": "CUDA_VISIBLE_DEVICES", "description": "GPU devices", "default": "0"}
