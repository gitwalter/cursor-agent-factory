    {"patternId": "documentation-agent", "required": true}
  ],
  "skills": [
    {"patternId": "bugfix-workflow", "required": true},
    {"patternId": "feature-workflow", "required": true},
    {"patternId": "grounding", "required": true},
    {"patternId": "tdd", "required": true}
  ],
  "knowledge": [
    {"filename": "deep-learning-patterns.json", "description": "Training loops, optimization, checkpointing"},
    {"filename": "huggingface-patterns.json", "description": "Transformers, datasets, training"},
    {"filename": "mlops-patterns.json", "description": "Experiment tracking and deployment"}
  ],
  "templates": {
    "codeTemplates": [
      {"category": "model", "directory": "templates/python/models/"},
