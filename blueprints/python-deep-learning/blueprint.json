      {"name": "Datasets", "version": "2.14+", "purpose": "Hugging Face datasets"},
      {"name": "Accelerate", "version": "0.21+", "purpose": "Distributed training"},
      {"name": "PEFT", "version": "0.5+", "purpose": "Parameter-efficient fine-tuning", "optional": true},
      {"name": "Lightning", "version": "2.0+", "purpose": "Training framework", "optional": true},
      {"name": "TensorBoard", "version": "2.14+", "purpose": "Training visualization"}
    ],
    "databases": [
      {"type": "tracking", "name": "MLflow", "purpose": "Experiment tracking"},
      {"type": "tracking", "name": "Weights & Biases", "purpose": "Alternative tracking", "optional": true}
    ],
    "tools": [
      {"name": "pytest", "purpose": "Testing"},
      {"name": "ruff", "purpose": "Linting"},
