{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Skill Catalog",
  "description": "Registry of skill types available for agent building. Contains metadata and descriptions - implementations are stack-specific.",
  "version": "1.0.0",
  "categories": {
    "core": {
      "description": "Generic skills applicable across all stacks",
      "implementedInFactory": true
    },
    "workflow": {
      "description": "Process and workflow skills",
      "implementedInFactory": true
    },
    "grounding": {
      "description": "Data verification and validation skills",
      "implementedInFactory": false,
      "note": "Stack-specific implementations live in respective agent workflow repositories"
    },
    "testing": {
      "description": "Test generation and TDD skills",
      "implementedInFactory": true
    },
    "verification": {
      "description": "Claim and hallucination verification skills",
      "implementedInFactory": true
    }
