{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Game Mechanics Knowledge",
  "description": "Detailed mechanics, rules, and variations for workshop games",
  "version": "1.0.0",
  "philosophy": "Games are not icebreakers or time-fillers. They are precision instruments for unlocking insight, building trust, and generating artifacts through play.",
  "game_design_principles": {
    "purpose_clarity": "Every game has a clear outcome it generates",
    "psychological_safety": "Games should feel safe to fail at",
    "active_participation": "Everyone contributes, no observers",
    "synthesis_built_in": "Games end with insight extraction",
    "fun_is_functional": "Joy unlocks creativity and builds bonds"
  },
  "game_categories": {
    "creative": {
      "purpose": "Unlock imagination and generate vision",
      "energy_level": "High creative, medium physical",
      "best_for": "Ideation, vision-setting, stakeholder discovery",
      "examples": ["Future Headlines", "Stakeholder Safari", "Dream Demo"]
    },
    "strategic": {
      "purpose": "Surface priorities and navigate trade-offs",
      "energy_level": "High cognitive, medium physical",
      "best_for": "Ethics, priorities, decisions, resource allocation",
      "examples": ["Dilemma Duel", "Value Auction", "Trade-Off Tetris"]
    },
    "collaborative": {
      "purpose": "Build artifacts and bonds together",
      "energy_level": "Medium cognitive, medium social",
      "best_for": "Design, celebration, team building",
      "examples": ["Agent Trading Cards", "Skill Bingo", "Architecture Pictionary", "Gratitude Circle"]
    }
  },
  "detailed_mechanics": {
    "future_headlines": {
      "game_id": "G1",
      "core_mechanic": "Imaginative projection to success state",
      "player_count": "2-30",
      "materials": [
        "Writing surface (paper, digital doc)",
        "Timer",
        "Voting mechanism (dots, reactions)"
      ],
      "setup_script": "Imagine it's 5 years from now. Your project has succeeded beyond wildest dreams. Major publications are writing about it. You'll write newspaper headlines about this success.",
      "timing": {
        "writing": "8-10 minutes",
        "sharing": "1-2 minutes per person",
        "voting": "3 minutes",
        "synthesis": "5 minutes"
      },
      "scoring": "3 votes per person, vote for inspiration not feasibility",
      "synthesis_questions": [
        "What themes appear across headlines?",
        "Who are the heroes mentioned?",
        "What emotions do the best headlines evoke?"
      ],
      "common_mistakes": [
        "Headlines too generic ('Project succeeds!')",
        "Judging feasibility during creation",
        "Rushing the sharing phase"
      ],
      "variations": {
        "magazine_cover": "Design full magazine cover with subheadlines",
        "tweet_storm": "Write Twitter thread announcing success",
        "future_interview": "Write interview quotes from future selves"
      }
    },
    "stakeholder_safari": {
      "game_id": "G2",
      "core_mechanic": "Empathetic role-play and interviewing",
      "player_count": "3-20",
      "materials": [
        "Stakeholder persona cards",
        "Interview question prompts",
        "Note-taking space"
      ],
      "setup_script": "We're going on a safari to discover who we're serving. First, brainstorm all stakeholders. Then each person will become a stakeholder and be interviewed in character.",
      "timing": {
        "brainstorm": "5 minutes",
        "character_development": "5 minutes",
        "interviews": "3-5 minutes per stakeholder",
        "synthesis": "10 minutes"
      },
      "interview_prompts": [
        "What's your name and what's your daily life like?",
        "What keeps you up at night regarding [topic]?",
        "If this project succeeds, how is your Tuesday different?",
        "What would make you trust a new solution?",
        "What's the thing no one asks about but matters to you?"
      ],
      "synthesis_questions": [
        "Who are our primary beneficiaries?",
        "Where do stakeholder needs conflict?",
        "What surprised us about a stakeholder?"
      ],
      "common_mistakes": [
        "Staying in your own perspective",
        "Making stakeholders caricatures",
        "Forgetting non-obvious stakeholders"
      ]
    },
    "dilemma_duel": {
      "game_id": "G4",
      "core_mechanic": "Structured ethical debate with values extraction",
      "player_count": "4-24",
      "materials": [
        "Dilemma scenario cards",
        "Timer",
        "Values capture board"
      ],
      "setup_script": "You'll face ethical dilemmas with no perfect answer. Split into teams to debate. The goal isn't winning - it's discovering your values.",
      "timing": {
        "dilemma_presentation": "2 minutes",
        "team_formation": "1 minute",
        "preparation": "5 minutes",
        "debate": "10 minutes (structured)",
        "values_extraction": "5 minutes"
      },
      "debate_structure": {
        "round_1": "Side A presents (2 min)",
        "round_2": "Side B responds (2 min)",
        "round_3": "Side B presents (2 min)",
        "round_4": "Side A responds (2 min)",
        "round_5": "Open discussion (2 min)"
      },
      "values_extraction_prompts": [
        "What value was each side protecting?",
        "What principle could honor both concerns?",
        "How might this dilemma appear in our project?"
      ],
      "dilemma_templates": [
        {
          "type": "speed_vs_safety",
          "template": "You can do X quickly with some risk or Y slowly with certainty"
        },
        {
          "type": "transparency_vs_privacy",
          "template": "Full disclosure benefits group but exposes individual"
        },
        {
          "type": "autonomy_vs_protection",
          "template": "Users want control but might harm themselves"
        }
      ]
    },
    "value_auction": {
      "game_id": "G5",
      "core_mechanic": "Scarcity-based priority revelation",
      "player_count": "3-20",
      "materials": [
        "Value cards (10-15 items)",
        "Bidding tokens (100 per participant/team)",
        "Auction tracking board"
      ],
      "setup_script": "You each have 100 points - your total investment capacity. We'll auction values. You cannot get more points. This reveals what you truly prioritize.",
      "timing": {
        "preview": "5 minutes",
        "strategy": "5 minutes",
        "auction": "15-20 minutes (1-2 min per value)",
        "analysis": "5 minutes"
      },
      "auction_mechanics": {
        "minimum_bid": 5,
        "bid_increment": 5,
        "going_once": "3-5 seconds between calls",
        "winner_explanation": "Winner explains why this value was worth the price"
      },
      "analysis_prompts": [
        "Which values sold highest? What does that reveal?",
        "What was surprisingly cheap?",
        "Where did stated preferences differ from bidding behavior?"
      ],
      "value_categories": {
        "technical": ["Performance", "Security", "Scalability", "Simplicity"],
        "user": ["Privacy", "Accessibility", "Delight", "Transparency"],
        "team": ["Developer Experience", "Maintainability", "Innovation", "Learning"],
        "business": ["Time to Market", "Cost Efficiency", "Stability", "Growth"]
      }
    },
    "tradeoff_tetris": {
      "game_id": "G6",
      "core_mechanic": "Spatial constraint visualization",
      "player_count": "2-12",
      "materials": [
        "Large canvas (physical or digital)",
        "Constraint blocks (sticky notes, shapes)",
        "Container boundary"
      ],
      "setup_script": "List all your constraints: time, budget, skills, dependencies, quality. Size blocks by weight. Now fit them all in your capacity container. Some won't fit - that's the trade-off.",
      "timing": {
        "constraint_identification": "5 minutes",
        "sizing": "5 minutes",
        "first_attempt": "10 minutes",
        "negotiation": "10 minutes",
        "final_configuration": "5 minutes"
      },
      "negotiation_prompts": [
        "What could we shrink? What would we lose?",
        "What's truly non-negotiable?",
        "Can we expand the container? At what cost?"
      ],
      "common_constraints": {
        "time": "Deadline pressure",
        "budget": "Financial limits",
        "skills": "Team capability gaps",
        "dependencies": "External blockers",
        "quality": "Standard requirements",
        "scope": "Feature expectations"
      }
    },
    "agent_trading_cards": {
      "game_id": "G7",
      "core_mechanic": "Character design with stats and lore",
      "player_count": "2-16",
      "materials": [
        "Card templates",
        "Art supplies or AI image generation",
        "Display board"
      ],
      "setup_script": "We're creating a trading card for each agent. Think of them as characters with personalities, abilities, and weaknesses. Make them memorable!",
      "card_template": {
        "name": "Agent Name",
        "title": "Role/Title",
        "visual": "How the agent looks/is represented",
        "stats": {
          "speed": "1-10",
          "accuracy": "1-10",
          "creativity": "1-10",
          "communication": "1-10",
          "reliability": "1-10"
        },
        "primary_ability": "Main power",
        "secondary_ability": "Bonus skill",
        "weakness": "Achilles heel",
        "lore": "2-3 sentence backstory",
        "synergy": "Works well with [other agent]",
        "catchphrase": "Memorable quote"
      },
      "timing": {
        "template_intro": "5 minutes",
        "brainstorm": "10 minutes",
        "creation": "20-25 minutes",
        "gallery": "10-15 minutes",
        "deck_assembly": "10-15 minutes"
      }
    },
    "skill_bingo": {
      "game_id": "G8",
      "core_mechanic": "Pattern completion with skill discovery",
      "player_count": "3-20",
      "materials": [
        "5x5 bingo cards",
        "Skill call list",
        "Markers"
      ],
      "setup_script": "Fill your bingo card with skills your project needs. Mix obvious ones with creative ideas. First to complete a pattern wins!",
      "timing": {
        "card_creation": "10 minutes",
        "calling": "15 minutes",
        "analysis": "10 minutes"
      },
      "bingo_rules": {
        "card_size": "5x5 grid",
        "center_square": "Free space or team-chosen skill",
        "winning_patterns": ["row", "column", "diagonal", "four corners", "full card"],
        "call_requirement": "Must explain why project needs this skill to mark it"
      },
      "skill_categories": [
        "Development Workflows",
        "Quality Assurance",
        "Documentation",
        "Research & Discovery",
        "Communication"
      ]
    },
    "architecture_pictionary": {
      "game_id": "G9",
      "core_mechanic": "Visual communication of mental models",
      "player_count": "4-16",
      "materials": [
        "Whiteboard or digital canvas",
        "Timer",
        "Concept list"
      ],
      "setup_script": "Draw system concepts while others guess. No words allowed! See how different people visualize the same thing.",
      "timing": {
        "per_drawing": "60 seconds",
        "guessing": "included in drawing time",
        "comparison": "5 minutes after each concept",
        "canonical_diagram": "10 minutes"
      },
      "drawing_rules": [
        "No words, letters, or numbers",
        "No gestures to hint",
        "Drawer cannot speak",
        "Others can shout guesses anytime"
      ],
      "synthesis_focus": "Where did mental models align vs. diverge?"
    },
    "gratitude_circle": {
      "game_id": "G11",
      "core_mechanic": "Structured appreciation and closure",
      "player_count": "2-30",
      "materials": [
        "Optional: gratitude cards",
        "Circle seating"
      ],
      "setup_script": "Think of one specific moment when someone on this team helped, taught, or inspired you. We'll share our gratitude around the circle.",
      "timing": {
        "reflection": "3 minutes",
        "sharing": "1-2 minutes per person",
        "closing": "2 minutes"
      },
      "facilitation_tips": [
        "Create quiet, reflective atmosphere",
        "Specificity matters more than eloquence",
        "It's okay to feel emotion",
        "Thank each person for sharing"
      ]
    }
  },
  "scaling_games": {
    "for_small_teams": {
      "general": "Everyone participates in everything, deeper discussions",
      "future_headlines": "More headlines per person, fuller discussion",
      "dilemma_duel": "No team split, assign devil's advocate",
      "value_auction": "Individual bidding",
      "gratitude_circle": "Everyone speaks to everyone"
    },
    "for_medium_teams": {
      "general": "Split for games, combine for synthesis",
      "future_headlines": "Pairs write together",
      "dilemma_duel": "Full structured debate with teams",
      "value_auction": "Team bidding, internal negotiation first",
      "gratitude_circle": "Pairs then highlights to group"
    },
    "for_large_teams": {
      "general": "Parallel games, representative synthesis",
      "future_headlines": "Async submission, group curation, rep presentation",
      "dilemma_duel": "Tournament bracket format",
      "value_auction": "Representative bidders coached by group",
      "gratitude_circle": "Written submission, anonymous readings"
    }
  },
  "game_selection_guide": {
    "for_vision": ["Future Headlines", "Stakeholder Safari", "Dream Demo"],
    "for_ethics": ["Dilemma Duel", "Value Auction"],
    "for_technology": ["Trade-Off Tetris", "Architecture Pictionary"],
    "for_design": ["Agent Trading Cards", "Skill Bingo"],
    "for_celebration": ["Demo Derby", "Gratitude Circle"],
    "for_low_energy": ["Gallery Walk", "Silent Brainstorm", "Gratitude Circle"],
    "for_high_energy": ["Dilemma Duel", "Value Auction", "Demo Derby"]
  }
}
