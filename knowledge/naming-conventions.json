{
  "metadata": {
    "name": "ABAP Naming Conventions",
    "description": "Clean ABAP and Hungarian notation naming conventions for SAP development",
    "version": "1.0.0",
    "lastUpdated": "2026-01-30"
  },
  "cleanAbap": {
    "description": "Modern naming following Clean ABAP guidelines",
    "reference": "https://github.com/SAP/styleguides/blob/main/clean-abap/CleanABAP.md",
    "principles": [
      "Use descriptive names that explain purpose",
      "Avoid abbreviations unless universally known",
      "Use English for all names",
      "Avoid Hungarian notation prefixes"
    ],
    "classes": {
      "prefix": "ZCL_ or YCL_",
      "pattern": "zcl_{domain}_{purpose}",
      "examples": ["zcl_travel_service", "zcl_booking_validator", "zcl_customer_repository"]
    },
    "interfaces": {
      "prefix": "ZIF_ or YIF_",
      "pattern": "zif_{domain}_{purpose}",
      "examples": ["zif_travel_repository", "zif_booking_service", "zif_customer_validator"]
    },
    "exceptions": {
      "prefix": "ZCX_ or YCX_",
      "pattern": "zcx_{domain}_{error_type}",
      "examples": ["zcx_travel_not_found", "zcx_booking_validation", "zcx_authorization_failed"]
    },
    "methods": {
      "pattern": "verb_noun or verb_adjective_noun",
      "verbs": ["get", "set", "create", "update", "delete", "validate", "calculate", "check", "is", "has"],
      "examples": ["get_travel_by_id", "create_booking", "validate_customer", "is_valid", "has_authorization"]
    },
    "variables": {
      "local": {
        "pattern": "descriptive_noun",
        "examples": ["travel_data", "customer_id", "booking_list", "total_amount"]
      },
      "parameters": {
        "importing": "descriptive name without prefix",
        "exporting": "result or descriptive name",
        "returning": "result",
        "examples": ["travel_id", "customer_data", "result", "booking_list"]
      }
    },
    "constants": {
      "pattern": "UPPER_SNAKE_CASE",
      "examples": ["MAX_RETRY_COUNT", "DEFAULT_CURRENCY", "STATUS_ACTIVE", "STATUS_CANCELLED"]
    },
    "cds": {
      "entities": {
        "prefix": "Z or Y",
        "pattern": "Z{Entity}",
        "examples": ["ZTravel", "ZBooking", "ZCustomer"]
      },
      "interfaceViews": {
        "prefix": "ZI_",
        "pattern": "ZI_{Entity}",
        "examples": ["ZI_Travel", "ZI_Booking", "ZI_Customer"]
      },
      "projectionViews": {
        "prefix": "ZC_",
        "pattern": "ZC_{Entity}",
        "examples": ["ZC_Travel", "ZC_Booking", "ZC_Customer"]
      },
      "fields": {
        "pattern": "PascalCase",
        "examples": ["TravelId", "CustomerName", "BookingDate", "TotalAmount"]
      }
    }
  },
  "hungarianNotation": {
    "description": "Traditional SAP naming with type prefixes",
    "note": "Legacy style, not recommended for new development",
    "prefixes": {
      "global": {
        "g_": "Global variable",
        "gc_": "Global constant",
        "gt_": "Global internal table",
        "gs_": "Global structure",
        "gr_": "Global reference",
        "go_": "Global object reference"
      },
      "local": {
        "l_": "Local variable",
        "lc_": "Local constant",
        "lt_": "Local internal table",
        "ls_": "Local structure",
        "lr_": "Local reference",
        "lo_": "Local object reference"
      },
      "parameters": {
        "i_": "Importing parameter",
        "e_": "Exporting parameter",
        "c_": "Changing parameter",
        "r_": "Returning parameter",
        "it_": "Importing table",
        "et_": "Exporting table",
        "ct_": "Changing table"
      },
      "types": {
        "ty_": "Type definition",
        "tt_": "Table type",
        "ts_": "Structure type"
      }
    },
    "examples": {
      "variables": ["lv_travel_id", "lt_bookings", "ls_customer", "lo_service"],
      "parameters": ["iv_travel_id", "et_bookings", "cs_customer", "rt_result"],
      "types": ["ty_travel_id", "tt_bookings", "ts_customer"]
    }
  },
  "rapNaming": {
    "behaviorDefinition": {
      "pattern": "Z{Entity}_B or ZBP_{Entity}",
      "examples": ["ZTravel_B", "ZBP_Travel"]
    },
    "behaviorImplementation": {
      "pattern": "ZBP_I_{Entity} or ZCL_BP_{Entity}",
      "examples": ["ZBP_I_Travel", "ZCL_BP_Travel"]
    },
    "actions": {
      "pattern": "camelCase verb",
      "examples": ["acceptTravel", "rejectTravel", "calculateTotal"]
    },
    "validations": {
      "pattern": "validate{Subject}",
      "examples": ["validateDates", "validateCustomer", "validateStatus"]
    },
    "determinations": {
      "pattern": "set{Subject} or calculate{Subject}",
      "examples": ["setInitialStatus", "calculateTotalPrice", "setCreatedBy"]
    }
  },
  "databaseObjects": {
    "tables": {
      "prefix": "Z or Y",
      "pattern": "Z{ENTITY}",
      "examples": ["ZTRAVEL", "ZBOOKING", "ZCUSTOMER"]
    },
    "domains": {
      "prefix": "Z or Y",
      "pattern": "Z{DOMAIN_NAME}",
      "examples": ["ZSTATUS", "ZCURRENCY", "ZTRAVEL_ID"]
    },
    "dataElements": {
      "prefix": "Z or Y",
      "pattern": "Z{ELEMENT_NAME}",
      "examples": ["ZTRAVEL_ID", "ZCUSTOMER_NAME", "ZBOOKING_DATE"]
    }
  },
  "bestPractices": [
    "Choose one convention and apply consistently",
    "Prefer Clean ABAP for new development",
    "Use descriptive names over abbreviations",
    "Keep names reasonably short but meaningful",
    "Use English for all names",
    "Document naming conventions in project guidelines",
    "Use code review to enforce conventions",
    "Consider using abaplint for automated checks"
  ]
}
