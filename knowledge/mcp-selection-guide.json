{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MCP Server Selection Guide",
  "description": "Decision tree and recommendations for selecting MCP servers during project generation",
  "version": "1.0.0",
  "selectionFlow": {
    "step1_role": {
      "question": "What is your primary role?",
      "options": [
        {"id": "developer", "label": "Full-Stack Developer", "recommendedCategories": ["core", "code", "data"]},
        {"id": "frontend", "label": "Frontend Developer", "recommendedCategories": ["core", "code", "collab"]},
        {"id": "backend", "label": "Backend Developer", "recommendedCategories": ["core", "code", "data", "cloud"]},
        {"id": "data-scientist", "label": "Data Scientist", "recommendedCategories": ["core", "data", "aiml"]},
        {"id": "ml-engineer", "label": "ML Engineer", "recommendedCategories": ["core", "data", "aiml", "cloud"]},
        {"id": "agent-developer", "label": "Agent Developer", "recommendedCategories": ["core", "aiml"]},
        {"id": "devops", "label": "DevOps Engineer", "recommendedCategories": ["core", "code", "cloud"]},
        {"id": "sap-developer", "label": "SAP Developer", "recommendedCategories": ["core", "code", "collab"]}
      ]
    },
    "step2_starterPack": {
      "question": "Would you like to start with a pre-configured pack?",
      "options": [
        {"id": "minimal", "label": "Minimal (3 servers)", "description": "filesystem, git, memory"},
        {"id": "web-developer", "label": "Web Developer (6 servers)", "description": "+ github, postgresql, playwright"},
        {"id": "data-science", "label": "Data Science (6 servers)", "description": "+ jupyter, bigquery, pinecone"},
        {"id": "ai-agent", "label": "AI Agent (6 servers)", "description": "+ langgraph, knowledge-graph, chromadb"},
        {"id": "enterprise", "label": "Enterprise (7 servers)", "description": "+ atlassian, slack, sentry"},
        {"id": "custom", "label": "Custom Selection", "description": "Browse all categories"}
      ]
    },
    "step3_customize": {
      "question": "Would you like to add more servers?",
      "action": "Browse categories and select additional servers"
    },
    "step4_custom": {
      "question": "Do you have custom/local MCP servers?",
      "fields": ["name", "command", "args", "envVariables", "description"]
    }
  },
  "categoryDescriptions": {
    "core": {
      "name": "Essential/Core Tools",
      "description": "Foundational tools recommended for all projects",
      "alwaysRecommend": true,
      "servers": ["filesystem", "git", "memory"]
    },
    "code": {
      "name": "Code, Testing, Version Control",
      "description": "GitHub/GitLab, error tracking, browser testing",
      "when": "You work with code repositories and need CI/CD integration",
      "servers": ["github", "gitlab", "sentry", "playwright", "deepwiki"]
    },
    "data": {
      "name": "Data and Databases",
      "description": "SQL, NoSQL, data warehouses, vector databases",
      "when": "Your project involves data storage or analytics",
      "servers": ["postgresql", "mongodb", "bigquery", "pinecone", "chromadb"]
    },
    "cloud": {
      "name": "Cloud, DevOps, Infrastructure",
      "description": "Docker, Kubernetes, Terraform, monitoring",
      "when": "You deploy to cloud or manage infrastructure",
      "servers": ["docker", "terraform", "pulumi", "datadog"]
    },
    "collab": {
      "name": "Collaboration and Productivity",
      "description": "Jira, Slack, Notion, Figma, calendar",
      "when": "You work in a team environment with specific tools",
      "servers": ["atlassian", "linear", "slack", "notion", "figma"]
    },
    "aiml": {
      "name": "AI/ML and Agent Development",
      "description": "MLflow, Hugging Face, LangGraph, vector DBs",
      "when": "You're building AI/ML applications or agents",
      "servers": ["huggingface", "mlflow", "langgraph", "ollama", "knowledge-graph"]
    }
  },
  "roleToServers": {
    "developer": {
      "essential": ["filesystem", "git", "memory", "fetch"],
      "recommended": ["github", "sentry", "playwright", "postgresql"],
      "optional": ["slack", "linear", "docker"]
    },
    "frontend": {
      "essential": ["filesystem", "git", "fetch"],
      "recommended": ["github", "playwright", "figma"],
      "optional": ["sentry", "slack"]
    },
    "backend": {
      "essential": ["filesystem", "git", "memory"],
      "recommended": ["github", "postgresql", "mongodb", "docker", "openapi"],
      "optional": ["sentry", "datadog"]
    },
    "data-scientist": {
      "essential": ["filesystem", "memory", "time"],
      "recommended": ["jupyter", "bigquery", "snowflake", "pinecone", "huggingface"],
      "optional": ["mlflow", "wandb"]
    },
    "ml-engineer": {
      "essential": ["filesystem", "git", "memory"],
      "recommended": ["mlflow", "wandb", "huggingface", "ollama", "pinecone", "docker"],
      "optional": ["langsmith", "github"]
    },
    "agent-developer": {
      "essential": ["filesystem", "memory", "sequentialthinking"],
      "recommended": ["langgraph", "knowledge-graph", "neo4j", "chromadb", "brave-search"],
      "optional": ["ollama", "langsmith"]
    },
    "devops": {
      "essential": ["filesystem", "git"],
      "recommended": ["docker", "terraform", "pulumi", "github", "datadog"],
      "optional": ["slack", "atlassian"]
    },
    "sap-developer": {
      "essential": ["filesystem", "git", "fetch"],
      "recommended": ["sap-documentation", "atlassian"],
      "optional": ["slack", "deepwiki"]
    }
  },
  "authenticationSummary": {
    "none": {
      "description": "No authentication required",
      "servers": ["filesystem", "git", "memory", "time", "fetch", "sequentialthinking", "playwright", "puppeteer", "docker", "chromadb", "sqlite"]
    },
    "api-key": {
      "description": "API key from service provider",
      "servers": ["brave-search", "exa", "sentry", "mongodb", "pinecone", "qdrant", "datadog", "huggingface", "mlflow", "wandb", "langsmith", "supabase", "todoist"]
    },
    "oauth": {
      "description": "OAuth authentication via browser",
      "servers": ["atlassian", "linear", "asana", "notion", "gmail", "google-calendar", "figma", "canva", "bigquery", "snowflake", "pulumi", "firebase", "langgraph"]
    },
    "pat": {
      "description": "Personal Access Token",
      "servers": ["github", "gitlab"]
    },
    "bot-token": {
      "description": "Bot token from platform",
      "servers": ["slack", "discord"]
    },
    "connection-string": {
      "description": "Database connection string",
      "servers": ["postgresql", "prisma", "neo4j"]
    }
  },
  "stackRecommendations": {
    "python": ["filesystem", "git", "memory", "github", "postgresql", "sentry", "mlflow", "jupyter"],
    "typescript": ["filesystem", "git", "memory", "github", "postgresql", "sentry", "playwright"],
    "nextjs": ["filesystem", "git", "memory", "github", "postgresql", "sentry", "playwright", "figma"],
    "fastapi": ["filesystem", "git", "memory", "github", "postgresql", "openapi", "sentry"],
    "django": ["filesystem", "git", "memory", "github", "postgresql", "sentry"],
    "react": ["filesystem", "git", "fetch", "github", "playwright", "figma"],
    "vue": ["filesystem", "git", "fetch", "github", "playwright", "figma"],
    "java": ["filesystem", "git", "memory", "github", "postgresql", "sentry"],
    "csharp": ["filesystem", "git", "memory", "github", "postgresql", "sentry"],
    "go": ["filesystem", "git", "memory", "github", "postgresql", "docker"],
    "rust": ["filesystem", "git", "memory", "github", "postgresql"],
    "sap-cap": ["filesystem", "git", "fetch", "sap-documentation", "atlassian"],
    "sap-abap": ["filesystem", "git", "fetch", "sap-documentation", "atlassian"]
  },
  "triggerRecommendations": {
    "jira": ["atlassian"],
    "confluence": ["atlassian"],
    "github": ["github", "deepwiki"],
    "gitlab": ["gitlab"],
    "linear": ["linear"],
    "slack": ["slack"],
    "sentry": ["sentry"],
    "figma": ["figma"]
  }
}
