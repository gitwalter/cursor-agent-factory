  "protocolVersions": {
    "odata_v2": {
      "description": "OData Version 2",
      "features": ["Function Imports", "Deep Insert", "Batch Requests"],
      "createdWith": ["SEGW", "CDS with @OData.publish"]
    },
    "odata_v4": {
      "description": "OData Version 4",
      "features": ["Actions", "Functions", "Deep Operations", "Draft"],
      "createdWith": ["RAP Service Binding"]
    },
    "ina": {
      "description": "InA Protocol for Analytics",
      "features": ["Analytical Queries", "Aggregations"],
      "createdWith": ["RAP Service Binding with InA protocol"]
    }
  },
  "commonBapis": {
    "BAPI_TRANSACTION_COMMIT": {
      "description": "Commit BAPI Transaction",
      "functionGroup": "BAPT",
      "parameters": {
        "importing": [
          {"name": "WAIT", "type": "BAPITA-WAIT", "optional": true, "description": "Wait for update task"}
        ],
        "exporting": [
          {"name": "RETURN", "type": "BAPIRET2", "description": "Return messages"}
        ]
      },
      "usage": "Call after successful BAPI execution to commit changes",
      "released": {"C2": true}
    },
    "BAPI_TRANSACTION_ROLLBACK": {
      "description": "Rollback BAPI Transaction",
      "functionGroup": "BAPT",
      "parameters": {
        "exporting": [
          {"name": "RETURN", "type": "BAPIRET2", "description": "Return messages"}
        ]
      },
      "usage": "Call after failed BAPI execution to rollback changes",
      "released": {"C2": true}
    },
    "BAPI_MATERIAL_GETLIST": {
      "description": "Get List of Materials",
      "functionGroup": "MASN",
      "parameters": {
        "importing": [
          {"name": "MAXROWS", "type": "BAPIMATIND-DEL_ROWS", "optional": true}
        ],
        "tables": [
          {"name": "MATNRSELECTION", "type": "BAPI_MATSEL"},
          {"name": "MATNRLIST", "type": "BAPI_MATKEY"}
        ],
        "exporting": [
          {"name": "RETURN", "type": "BAPIRETURN"}
        ]
      },
      "usage": "Retrieve list of materials matching selection criteria",
      "released": {"C2": true}
    }
  },
